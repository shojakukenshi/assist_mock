<div class="space-y-6" data-controller="billing billing-detail">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">請求・入金管理</h1>
      <p class="mt-1 text-sm text-gray-500">請求処理と入金状況の確認</p>
    </div>
    <button class="btn-primary" data-action="click->billing#open">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      請求書発行
    </button>
  </div>

  <!-- KPIカード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-4">
    <div class="card p-5 bg-gradient-to-br from-blue-500 to-blue-600">
      <div class="text-white">
        <p class="text-xs font-medium text-blue-100">総請求額</p>
        <p class="mt-2 text-2xl font-bold"><%= number_to_currency(@summary[:total_amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
      </div>
    </div>
    <div class="card p-5 bg-gradient-to-br from-green-500 to-green-600">
      <div class="text-white">
        <p class="text-xs font-medium text-green-100">入金済</p>
        <p class="mt-2 text-2xl font-bold"><%= number_to_currency(@summary[:paid_amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
      </div>
    </div>
    <div class="card p-5 bg-gradient-to-br from-orange-500 to-orange-600">
      <div class="text-white">
        <p class="text-xs font-medium text-orange-100">未入金</p>
        <p class="mt-2 text-2xl font-bold"><%= number_to_currency(@summary[:unpaid_amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
      </div>
    </div>
    <div class="card p-5 bg-gradient-to-br from-red-500 to-red-600">
      <div class="text-white">
        <p class="text-xs font-medium text-red-100">入金遅延</p>
        <p class="mt-2 text-2xl font-bold"><%= number_to_currency(@summary[:overdue_amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
      </div>
    </div>
  </div>

  <!-- ステータスタブ -->
  <div class="bg-white rounded-xl shadow-sm">
    <div class="border-b border-gray-200 px-6">
      <nav class="flex -mb-px space-x-8">
        <button class="tab-button active">全て (<%= @summary[:total_billings] %>)</button>
        <button class="tab-button">未請求 (<%= @summary[:unbilled] %>)</button>
        <button class="tab-button">請求済 (<%= @summary[:billed] %>)</button>
        <button class="tab-button">入金済 (<%= @summary[:paid] %>)</button>
        <button class="tab-button text-red-600">入金遅延 (<%= @summary[:overdue] %>)</button>
      </nav>
    </div>

    <!-- テーブル -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">請求番号</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">クライアント</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">案件名</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">請求額</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">請求日</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">支払期限</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">入金日</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @billings.each do |billing| %>
            <tr class="cursor-pointer hover:bg-gray-50 <%= 'bg-red-50' if billing[:status] == '入金遅延' %>"
                data-action="click->billing-detail#open"
                data-billing='<%= billing.to_json %>'>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= billing[:invoice_number] || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= billing[:client] %></td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= billing[:project] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-medium">
                <%= number_to_currency(billing[:total], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 text-center">
                <%= billing[:issue_date] || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 text-center">
                <%= billing[:due_date] || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 text-center">
                <%= billing[:payment_date] || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% case billing[:status] %>
                <% when "未請求" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">未請求</span>
                <% when "請求済" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">請求済</span>
                <% when "入金済" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">入金済</span>
                <% when "入金遅延" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                    入金遅延 (<%= billing[:days_overdue] %>日)
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <% if billing[:invoice_number] %>
                  <button class="text-blue-600 hover:text-blue-800 mr-2">PDF</button>
                  <% if billing[:status] == "請求済" || billing[:status] == "入金遅延" %>
                    <button class="text-green-600 hover:text-green-800">入金確認</button>
                  <% end %>
                <% else %>
                  <button class="text-blue-600 hover:text-blue-800">請求書作成</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 請求書作成モーダル -->
  <div class="fixed inset-0 bg-gray-900/50 z-50 hidden"
       data-billing-target="modal"
       data-action="click->billing#closeOnBackdrop">
    <div class="flex items-center justify-center min-h-screen px-4">
      <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full" onclick="event.stopPropagation()">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-xl font-bold text-gray-900">請求書発行</h3>
        </div>
        <form data-billing-target="form" data-action="submit->billing#submit">
          <div class="px-6 py-6 space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">クライアント <span class="text-red-500">*</span></label>
              <select name="client" required class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                <option value="">選択してください</option>
                <option>株式会社サンプルテクノロジー</option>
                <option>株式会社メガコーポレーション</option>
                <option>株式会社グローバルサービス</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">案件名</label>
              <input type="text" name="project" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">金額 <span class="text-red-500">*</span></label>
                <input type="number" name="amount" required min="0"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg"
                       data-action="input->billing#updatePreview">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">消費税率</label>
                <select name="tax_rate" class="w-full px-3 py-2 border border-gray-300 rounded-lg"
                        data-action="change->billing#updatePreview">
                  <option value="10">10%</option>
                  <option value="8">8%（軽減税率）</option>
                </select>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">請求日</label>
                <input type="date" name="issue_date" class="w-full px-3 py-2 border border-gray-300 rounded-lg"
                       value="<%= Date.today.strftime('%Y-%m-%d') %>">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">支払期限</label>
                <input type="date" name="due_date" class="w-full px-3 py-2 border border-gray-300 rounded-lg"
                       value="<%= (Date.today + 30).strftime('%Y-%m-%d') %>">
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">備考</label>
              <textarea name="notes" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg"></textarea>
            </div>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <h4 class="font-semibold text-gray-900 mb-3">金額プレビュー</h4>
              <div data-billing-target="preview">
                <div class="text-center text-gray-500 py-4">金額を入力してください</div>
              </div>
            </div>
          </div>
          <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
            <button type="button" class="btn-secondary" data-action="click->billing#close">キャンセル</button>
            <button type="submit" class="btn-primary">請求書作成</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- 詳細パネル -->
  <aside class="fixed inset-y-0 right-0 w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
         data-billing-detail-target="panel">
    <!-- ヘッダー -->
    <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 z-10">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-900">請求詳細</h2>
        <button class="text-gray-400 hover:text-gray-600 p-2"
                data-action="click->billing-detail#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- コンテンツ -->
    <div class="p-6 space-y-6">
      <!-- 基本情報 -->
      <div class="flex items-start justify-between">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2" data-billing-detail-target="client">-</h3>
          <p class="text-sm text-gray-500">
            請求番号: <span data-billing-detail-target="invoiceNumber">-</span>
          </p>
          <p class="text-sm text-gray-600 mt-2">
            案件: <span data-billing-detail-target="project">-</span>
          </p>
        </div>
        <span data-billing-detail-target="statusBadge" class="inline-flex px-3 py-1 text-sm font-semibold rounded-full">-</span>
      </div>

      <!-- クイックアクション -->
      <div class="flex space-x-2">
        <button class="flex-1 btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          PDF出力
        </button>
        <button class="flex-1 btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          メール送信
        </button>
      </div>

      <!-- 金額サマリー -->
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-blue-50 rounded-lg p-4">
          <div class="text-sm text-gray-600 mb-1">請求額</div>
          <div class="text-2xl font-bold text-blue-600" data-billing-detail-target="amount">¥0</div>
        </div>
        <div class="bg-green-50 rounded-lg p-4">
          <div class="text-sm text-gray-600 mb-1">入金額</div>
          <div class="text-2xl font-bold text-green-600" data-billing-detail-target="paidAmount">¥0</div>
        </div>
      </div>

      <!-- 請求日程 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          日程情報
        </h4>

        <dl class="grid grid-cols-1 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">請求日</dt>
            <dd class="mt-1 text-sm text-gray-900" data-billing-detail-target="issueDate">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">支払期限</dt>
            <dd class="mt-1 text-sm text-gray-900" data-billing-detail-target="dueDate">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">入金日</dt>
            <dd class="mt-1 text-sm text-gray-900" data-billing-detail-target="paymentDate">-</dd>
          </div>
        </dl>
      </div>

      <!-- 請求詳細 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          請求明細
        </h4>

        <dl class="grid grid-cols-1 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">クライアント</dt>
            <dd class="mt-1 text-sm text-gray-900" data-billing-detail-target="clientName">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">案件名</dt>
            <dd class="mt-1 text-sm text-gray-900" data-billing-detail-target="projectName">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">ステータス</dt>
            <dd class="mt-1 text-sm text-gray-900" data-billing-detail-target="statusText">-</dd>
          </div>
        </dl>
      </div>

      <!-- アクションボタン -->
      <div class="pt-6 border-t border-gray-200 space-y-2">
        <button class="w-full btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          入金確認
        </button>
        <button class="w-full btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
          </svg>
          編集
        </button>
      </div>
    </div>
  </aside>
</div>
