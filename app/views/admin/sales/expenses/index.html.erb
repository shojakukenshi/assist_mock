<div class="space-y-6" data-controller="expense-form file-upload expense-detail">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">経費登録</h1>
      <p class="mt-1 text-sm text-gray-500">営業活動経費の登録・承認申請</p>
    </div>
    <button class="btn-primary" data-action="click->expense-form#open">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      経費登録
    </button>
  </div>

  <!-- サマリーカード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-6">
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">総件数</p>
      <p class="mt-2 text-2xl font-bold text-gray-900"><%= @summary[:total_expenses] %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">承認待ち</p>
      <p class="mt-2 text-2xl font-bold text-yellow-600"><%= @summary[:pending] %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">承認済</p>
      <p class="mt-2 text-2xl font-bold text-green-600"><%= @summary[:approved] %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">差戻し</p>
      <p class="mt-2 text-2xl font-bold text-red-600"><%= @summary[:rejected] %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">総額</p>
      <p class="mt-2 text-xl font-bold text-gray-900"><%= number_to_currency(@summary[:total_amount], unit: "¥", precision: 0, format: "%u%n") %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">未承認額</p>
      <p class="mt-2 text-xl font-bold text-orange-600"><%= number_to_currency(@summary[:pending_amount], unit: "¥", precision: 0, format: "%u%n") %></p>
    </div>
  </div>

  <!-- フィルター -->
  <div class="card p-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <input type="text" placeholder="検索..." class="px-3 py-2 border border-gray-300 rounded-lg">
      <select class="px-3 py-2 border border-gray-300 rounded-lg">
        <option>ステータス: 全て</option>
        <% @statuses.each do |status| %>
          <option><%= status %></option>
        <% end %>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg">
        <option>費目: 全て</option>
        <% @categories.each do |cat| %>
          <option><%= cat %></option>
        <% end %>
      </select>
      <input type="month" class="px-3 py-2 border border-gray-300 rounded-lg" value="2025-11">
    </div>
  </div>

  <!-- 経費一覧テーブル -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">日付</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">費目</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">内容</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">金額</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">領収書</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">申請日時</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @expenses.each do |expense| %>
            <tr class="hover:bg-gray-50 cursor-pointer"
                data-action="click->expense-detail#open"
                data-expense='<%= expense.to_json %>'>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= expense[:date] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= expense[:category] %></td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= expense[:description] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-medium">
                <%= number_to_currency(expense[:amount], unit: "¥", precision: 0, format: "%u%n") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% if expense[:receipt] %>
                  <a href="#" class="text-blue-600 hover:text-blue-800">
                    <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </a>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% case expense[:status] %>
                <% when "承認待ち" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">承認待ち</span>
                <% when "承認済" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">承認済</span>
                <% when "差戻し" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">差戻し</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= expense[:submitted_at] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <button class="text-blue-600 hover:text-blue-800 mr-2">編集</button>
                <button class="text-red-600 hover:text-red-800">削除</button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 経費登録モーダル -->
  <div class="fixed inset-0 bg-gray-900/50 z-50 hidden"
       data-expense-form-target="modal"
       data-action="click->expense-form#closeOnBackdrop">
    <div class="flex items-center justify-center min-h-screen px-4">
      <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full" onclick="event.stopPropagation()">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-xl font-bold text-gray-900">経費登録</h3>
        </div>
        <form data-expense-form-target="form" data-action="submit->expense-form#submit">
          <div class="px-6 py-6 space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">日付 <span class="text-red-500">*</span></label>
                <input type="date" name="date" required class="w-full px-3 py-2 border border-gray-300 rounded-lg">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">費目 <span class="text-red-500">*</span></label>
                <select name="category" required class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                  <option value="">選択してください</option>
                  <% @categories.each do |cat| %>
                    <option><%= cat %></option>
                  <% end %>
                </select>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">金額 <span class="text-red-500">*</span></label>
              <div class="relative">
                <span class="absolute left-3 top-2 text-gray-500">¥</span>
                <input type="number" name="amount" required min="0" class="w-full pl-8 pr-3 py-2 border border-gray-300 rounded-lg">
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">内容</label>
              <textarea name="description" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg"></textarea>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">領収書添付</label>
              <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center cursor-pointer hover:border-blue-400"
                   data-file-upload-target="dropzone"
                   data-action="click->file-upload#selectFile
                               drop->file-upload#handleDrop
                               dragover->file-upload#handleDragOver
                               dragleave->file-upload#handleDragLeave">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
                <p class="mt-2 text-sm text-gray-600">クリックまたはドラッグ＆ドロップ</p>
                <p class="text-xs text-gray-500">PDF, JPG, PNG (最大10MB)</p>
              </div>
              <input type="file" class="hidden" accept=".pdf,.jpg,.jpeg,.png"
                     data-file-upload-target="input"
                     data-action="change->file-upload#handleFile">
              <div class="mt-2 hidden" data-file-upload-target="preview"></div>
            </div>
          </div>
          <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
            <button type="button" class="btn-secondary" data-action="click->expense-form#close">キャンセル</button>
            <button type="submit" class="btn-primary">登録</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- 詳細ペインオーバーレイ -->
  <div class="fixed inset-0 bg-gray-900/50 z-40 hidden"
       data-expense-detail-target="overlay"
       data-action="click->expense-detail#close"></div>

  <!-- 詳細ペイン -->
  <aside class="fixed inset-y-0 right-0 w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
         data-expense-detail-target="panel">
    <!-- ヘッダー -->
    <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 z-10">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-900">経費詳細</h2>
        <button class="text-gray-400 hover:text-gray-600 p-2"
                data-action="click->expense-detail#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- コンテンツ -->
    <div class="p-6 space-y-6">
      <!-- 日付 + ステータス -->
      <div class="flex items-start justify-between">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2" data-expense-detail-target="date"></h3>
          <p class="text-sm text-gray-500" data-expense-detail-target="category"></p>
        </div>
        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full"
              data-expense-detail-target="statusBadge">
        </span>
      </div>

      <!-- クイックアクション -->
      <div class="flex space-x-2">
        <button class="flex-1 btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
          </svg>
          編集
        </button>
        <button class="flex-1 btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          削除
        </button>
      </div>

      <!-- 金額カード -->
      <div class="bg-blue-50 rounded-lg p-4 text-center">
        <div class="text-3xl font-bold text-blue-600" data-expense-detail-target="amount"></div>
        <div class="text-xs text-gray-600 mt-1">申請金額</div>
      </div>

      <!-- 基本情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          経費情報
        </h4>

        <dl class="grid grid-cols-1 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">日付</dt>
            <dd class="mt-1 text-sm text-gray-900" data-expense-detail-target="dateField"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">費目</dt>
            <dd class="mt-1 text-sm text-gray-900" data-expense-detail-target="categoryField"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">金額</dt>
            <dd class="mt-1 text-sm text-gray-900 font-medium" data-expense-detail-target="amountField"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">内容</dt>
            <dd class="mt-1 text-sm text-gray-900" data-expense-detail-target="description"></dd>
          </div>
        </dl>
      </div>

      <!-- 申請者情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          申請者情報
        </h4>

        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">部署</dt>
            <dd class="mt-1 text-sm text-gray-900" data-expense-detail-target="department"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">申請者</dt>
            <dd class="mt-1 text-sm text-gray-900" data-expense-detail-target="requester"></dd>
          </div>
          <div class="col-span-2">
            <dt class="text-sm font-medium text-gray-500">申請日時</dt>
            <dd class="mt-1 text-sm text-gray-900" data-expense-detail-target="submittedAt"></dd>
          </div>
        </dl>
      </div>

      <!-- 承認情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          承認情報
        </h4>

        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">承認者</dt>
            <dd class="mt-1 text-sm text-gray-900" data-expense-detail-target="approver"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">承認日</dt>
            <dd class="mt-1 text-sm text-gray-900" data-expense-detail-target="approvedDate"></dd>
          </div>
        </dl>
      </div>

      <!-- 領収書 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          領収書
        </h4>

        <div data-expense-detail-target="receipt">
          <a href="#" class="flex items-center justify-center px-4 py-3 border border-gray-300 rounded-lg hover:bg-gray-50 text-blue-600">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            領収書を表示
          </a>
        </div>
      </div>
    </div>
  </aside>
</div>
