<div class="space-y-6" data-controller="kanban tab">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">案件進捗管理</h1>
      <p class="mt-1 text-sm text-gray-500">商談から請求完了までのステータス可視化</p>
    </div>
    <div class="flex flex-wrap gap-2">
      <button class="btn-secondary text-sm">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
        </svg>
        フィルター
      </button>
      <button class="btn-primary text-sm">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        新規案件登録
      </button>
    </div>
  </div>

  <!-- KPIサマリーカード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-5">
    <div class="card p-4 bg-gradient-to-br from-blue-500 to-blue-600">
      <div class="text-white">
        <p class="text-xs font-medium text-blue-100">総案件数</p>
        <p class="mt-2 text-3xl font-bold"><%= @summary[:total_deals] %></p>
        <p class="mt-1 text-xs text-blue-100">進行中の案件</p>
      </div>
    </div>

    <div class="card p-4 bg-gradient-to-br from-green-500 to-green-600">
      <div class="text-white">
        <p class="text-xs font-medium text-green-100">総案件金額</p>
        <p class="mt-2 text-2xl font-bold"><%= number_to_currency(@summary[:total_value], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
        <p class="mt-1 text-xs text-green-100">全体</p>
      </div>
    </div>

    <div class="card p-4 bg-gradient-to-br from-purple-500 to-purple-600">
      <div class="text-white">
        <p class="text-xs font-medium text-purple-100">見込み売上</p>
        <p class="mt-2 text-2xl font-bold"><%= number_to_currency(@summary[:expected_revenue], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
        <p class="mt-1 text-xs text-purple-100">確度加味</p>
      </div>
    </div>

    <div class="card p-4 bg-gradient-to-br from-orange-500 to-orange-600">
      <div class="text-white">
        <p class="text-xs font-medium text-orange-100">受注率</p>
        <p class="mt-2 text-3xl font-bold"><%= @summary[:success_rate] %>%</p>
        <p class="mt-1 text-xs text-orange-100">過去3ヶ月平均</p>
      </div>
    </div>

    <div class="card p-4 bg-gradient-to-br from-cyan-500 to-cyan-600">
      <div class="text-white">
        <p class="text-xs font-medium text-cyan-100">平均リードタイム</p>
        <p class="mt-2 text-3xl font-bold"><%= @summary[:average_lead_time] %></p>
        <p class="mt-1 text-xs text-cyan-100">日</p>
      </div>
    </div>
  </div>

  <!-- カンバンボード -->
  <div class="space-y-4">
    <h2 class="text-lg font-bold text-gray-900">案件進捗カンバン</h2>

    <div class="overflow-x-auto">
      <div class="flex gap-4 min-w-max pb-4">
        <% @stages.each do |stage| %>
          <%
            # ステータスごとの色設定
            colors = case stage[:color]
            when "orange"
              { bg: "bg-orange-50", border: "border-orange-300", header_bg: "bg-orange-100", header_text: "text-orange-900", badge_bg: "bg-orange-500" }
            when "yellow"
              { bg: "bg-yellow-50", border: "border-yellow-300", header_bg: "bg-yellow-100", header_text: "text-yellow-900", badge_bg: "bg-yellow-500" }
            when "purple"
              { bg: "bg-purple-50", border: "border-purple-300", header_bg: "bg-purple-100", header_text: "text-purple-900", badge_bg: "bg-purple-500" }
            when "green"
              { bg: "bg-green-50", border: "border-green-300", header_bg: "bg-green-100", header_text: "text-green-900", badge_bg: "bg-green-500" }
            when "blue"
              { bg: "bg-blue-50", border: "border-blue-300", header_bg: "bg-blue-100", header_text: "text-blue-900", badge_bg: "bg-blue-500" }
            end
            deals = @deals[stage[:id].to_sym] || []
            total_amount = deals.sum { |d| d[:amount] || 0 }
          %>

          <!-- カンバンレーン -->
          <div class="flex-shrink-0 w-80">
            <div class="flex flex-col <%= colors[:bg] %> rounded-xl border-2 <%= colors[:border] %> shadow-sm min-h-[600px]">
              <!-- レーンヘッダー -->
              <div class="<%= colors[:header_bg] %> px-4 py-3 rounded-t-xl border-b-2 <%= colors[:border] %>">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-2">
                    <h3 class="text-sm font-bold <%= colors[:header_text] %>"><%= stage[:name] %></h3>
                    <span class="inline-flex items-center justify-center w-6 h-6 text-xs font-bold text-white <%= colors[:badge_bg] %> rounded-full">
                      <%= stage[:count] %>
                    </span>
                  </div>
                </div>
                <div class="mt-1 text-xs <%= colors[:header_text] %> opacity-75">
                  ¥<%= number_with_delimiter(total_amount) %>
                </div>
              </div>

              <!-- カードエリア -->
              <div class="flex-1 p-3 overflow-y-auto"
                   data-kanban-target="column"
                   data-stage="<%= stage[:name] %>"
                   data-action="drop->kanban#drop
                               dragover->kanban#dragOver
                               dragenter->kanban#dragEnter
                               dragleave->kanban#dragLeave">
                <div class="space-y-3" data-kanban-cards>
                  <% deals.each do |deal| %>
                    <!-- 案件カード -->
                    <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition cursor-move group"
                         draggable="true"
                         data-kanban-target="card"
                         data-deal-id="<%= deal[:id] %>"
                         data-action="dragstart->kanban#dragStart
                                     dragend->kanban#dragEnd
                                     click->kanban#openDetail">
                      <!-- カードヘッダー -->
                      <div class="flex items-start justify-between mb-2">
                        <h4 class="text-sm font-bold text-gray-900 line-clamp-2 flex-1"><%= deal[:name] %></h4>
                        <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                      </div>

                      <!-- クライアント -->
                      <div class="flex items-center gap-1 mb-3">
                        <svg class="w-3.5 h-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        <span class="text-xs text-gray-600 truncate"><%= deal[:client] %></span>
                      </div>

                      <!-- イベント詳細 -->
                      <div class="space-y-1.5 mb-3">
                        <% if deal[:venue].present? %>
                          <div class="flex items-center gap-1">
                            <svg class="w-3.5 h-3.5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <span class="text-xs text-gray-600 truncate"><%= deal[:venue] %></span>
                          </div>
                        <% end %>

                        <% if deal[:event_date].present? %>
                          <div class="flex items-center gap-1">
                            <svg class="w-3.5 h-3.5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span class="text-xs text-gray-600"><%= deal[:event_date] %></span>
                          </div>
                        <% end %>

                        <% if deal[:staff_count].present? %>
                          <div class="flex items-center gap-1">
                            <svg class="w-3.5 h-3.5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            <span class="text-xs text-gray-900 font-semibold"><%= deal[:staff_count] %>名</span>
                          </div>
                        <% end %>
                      </div>

                      <!-- 金額 -->
                      <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                        <div class="text-lg font-bold text-gray-900">
                          ¥<%= number_with_delimiter(deal[:amount]) %>
                        </div>
                        <% if deal[:tags].present? && deal[:tags].any? %>
                          <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                            <%= deal[:tags].first %>
                          </span>
                        <% end %>
                      </div>

                      <!-- 担当者 -->
                      <div class="mt-3 flex items-center justify-between text-xs">
                        <span class="text-gray-500"><%= deal[:sales_rep] %></span>
                        <span class="text-gray-400"><%= deal[:last_updated] %></span>
                      </div>
                    </div>
                  <% end %>

                  <!-- 空の状態 -->
                  <% if deals.empty? %>
                    <div class="flex flex-col items-center justify-center py-12 text-gray-400">
                      <svg class="w-12 h-12 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                      </svg>
                      <p class="text-sm">案件なし</p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 詳細パネル（オーバーレイ） -->
  <div class="fixed inset-0 bg-gray-900/50 z-40 hidden"
       data-kanban-target="overlay"
       data-action="click->kanban#closeDetail"></div>

  <div class="fixed inset-y-0 right-0 max-w-2xl w-full bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50"
       data-kanban-target="detailPane">
    <div class="h-full overflow-y-auto p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-gray-900">案件詳細</h2>
        <button class="text-gray-400 hover:text-gray-600"
                data-action="click->kanban#closeDetail">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <p class="text-gray-500">詳細情報をここに表示（実装中）</p>
    </div>
  </div>
</div>
