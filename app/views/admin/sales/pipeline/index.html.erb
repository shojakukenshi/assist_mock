<div class="space-y-6" data-controller="kanban tab">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">案件進捗管理</h1>
      <p class="mt-1 text-sm text-gray-500">商談から請求完了までのステータス可視化</p>
    </div>
    <div class="flex flex-wrap gap-2">
      <button class="btn-secondary text-sm">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
        </svg>
        フィルター
      </button>
      <button class="btn-primary text-sm">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        新規案件登録
      </button>
    </div>
  </div>

  <!-- KPIサマリーカード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-5">
    <div class="card p-4 bg-gradient-to-br from-blue-500 to-blue-600">
      <div class="text-white">
        <p class="text-xs font-medium text-blue-100">総案件数</p>
        <p class="mt-2 text-3xl font-bold"><%= @summary[:total_deals] %></p>
        <p class="mt-1 text-xs text-blue-100">進行中の案件</p>
      </div>
    </div>

    <div class="card p-4 bg-gradient-to-br from-green-500 to-green-600">
      <div class="text-white">
        <p class="text-xs font-medium text-green-100">総案件金額</p>
        <p class="mt-2 text-2xl font-bold"><%= number_to_currency(@summary[:total_value], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
        <p class="mt-1 text-xs text-green-100">全体</p>
      </div>
    </div>

    <div class="card p-4 bg-gradient-to-br from-purple-500 to-purple-600">
      <div class="text-white">
        <p class="text-xs font-medium text-purple-100">見込み売上</p>
        <p class="mt-2 text-2xl font-bold"><%= number_to_currency(@summary[:expected_revenue], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
        <p class="mt-1 text-xs text-purple-100">確度加味</p>
      </div>
    </div>

    <div class="card p-4 bg-gradient-to-br from-orange-500 to-orange-600">
      <div class="text-white">
        <p class="text-xs font-medium text-orange-100">受注率</p>
        <p class="mt-2 text-3xl font-bold"><%= @summary[:success_rate] %>%</p>
        <p class="mt-1 text-xs text-orange-100">過去3ヶ月平均</p>
      </div>
    </div>

    <div class="card p-4 bg-gradient-to-br from-cyan-500 to-cyan-600">
      <div class="text-white">
        <p class="text-xs font-medium text-cyan-100">平均リードタイム</p>
        <p class="mt-2 text-3xl font-bold"><%= @summary[:average_lead_time] %></p>
        <p class="mt-1 text-xs text-cyan-100">日</p>
      </div>
    </div>
  </div>

  <!-- カンバンボード -->
  <div class="bg-white rounded-xl shadow-sm p-6">
    <div class="overflow-x-auto">
      <div class="flex gap-4 min-w-max pb-4">
        <% @stages.each do |stage| %>
          <div class="flex-shrink-0 w-80">
            <!-- ステージヘッダー -->
            <div class="mb-4">
              <div class="flex items-center justify-between">
                <h3 class="font-semibold text-gray-900 flex items-center">
                  <% case stage[:color] %>
                  <% when "orange" %>
                    <span class="w-3 h-3 rounded-full bg-orange-500 mr-2"></span>
                  <% when "yellow" %>
                    <span class="w-3 h-3 rounded-full bg-yellow-500 mr-2"></span>
                  <% when "green" %>
                    <span class="w-3 h-3 rounded-full bg-green-500 mr-2"></span>
                  <% when "blue" %>
                    <span class="w-3 h-3 rounded-full bg-blue-500 mr-2"></span>
                  <% when "purple" %>
                    <span class="w-3 h-3 rounded-full bg-purple-500 mr-2"></span>
                  <% end %>
                  <%= stage[:name] %>
                </h3>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800"
                      data-kanban-count>
                  <%= stage[:count] %>
                </span>
              </div>
            </div>

            <!-- カードエリア（ドロップゾーン） -->
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-3 min-h-[600px] transition-colors"
                 data-kanban-target="column"
                 data-stage="<%= stage[:name] %>"
                 data-action="drop->kanban#drop
                             dragover->kanban#dragOver
                             dragenter->kanban#dragEnter
                             dragleave->kanban#dragLeave">
              <div class="space-y-3" data-kanban-cards>
                <% deals = @deals[stage[:id].to_sym] || [] %>
                <% deals.each do |deal| %>
                  <!-- 案件カード -->
                  <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition cursor-move group"
                       draggable="true"
                       data-kanban-target="card"
                       data-deal-id="<%= deal[:id] %>"
                       data-action="dragstart->kanban#dragStart
                                   dragend->kanban#dragEnd
                                   click->kanban#openDetail">
                    <!-- 優先度インジケーター -->
                    <div class="flex items-center justify-between mb-2">
                      <% case deal[:priority] %>
                      <% when "high" %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                          高
                        </span>
                      <% when "medium" %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                          中
                        </span>
                      <% when "low" %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                          低
                        </span>
                      <% end %>
                      <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                      </svg>
                    </div>

                    <!-- 案件名 -->
                    <h4 class="font-medium text-gray-900 mb-1 line-clamp-2"><%= deal[:name] %></h4>

                    <!-- クライアント名 -->
                    <p class="text-sm text-gray-600 mb-3">
                      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                      </svg>
                      <%= deal[:client] %>
                    </p>

                    <!-- 金額と確度 -->
                    <div class="flex items-center justify-between mb-3">
                      <span class="text-lg font-bold text-gray-900">
                        <%= number_to_currency(deal[:amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
                      </span>
                      <span class="text-sm text-gray-600">
                        確度 <%= deal[:probability] %>%
                      </span>
                    </div>

                    <!-- タグ -->
                    <% if deal[:tags].present? %>
                      <div class="flex flex-wrap gap-1 mb-3">
                        <% deal[:tags].each do |tag| %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                            <%= tag %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>

                    <!-- フッター -->
                    <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                      <div class="flex items-center text-xs text-gray-500">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        <%= deal[:sales_rep] %>
                      </div>
                      <div class="text-xs text-gray-400">
                        <%= deal[:last_updated] %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 詳細パネル（オーバーレイ） -->
  <div class="fixed inset-0 bg-gray-900/50 z-40 hidden"
       data-kanban-target="overlay"
       data-action="click->kanban#closeDetail"></div>

  <div class="fixed inset-y-0 right-0 max-w-2xl w-full bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50"
       data-kanban-target="detailPane">
    <div class="h-full overflow-y-auto p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-gray-900">案件詳細</h2>
        <button class="text-gray-400 hover:text-gray-600"
                data-action="click->kanban#closeDetail">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <p class="text-gray-500">詳細情報をここに表示（実装中）</p>
    </div>
  </div>
</div>
