<div class="p-6">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">バッチ・集計管理</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% @batch_processes.each do |batch| %>
      <a href="<%= batch[:path] %>" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
        <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= batch[:name] %></h3>
        <p class="text-sm text-gray-600 mb-4"><%= batch[:description] %></p>
        <div class="text-xs text-gray-500">
          <p>最終実行: <%= batch[:last_executed] %></p>
          <p>実行回数: <%= batch[:execution_count] %>回</p>
        </div>
      </a>
    <% end %>
  </div>
</div>
