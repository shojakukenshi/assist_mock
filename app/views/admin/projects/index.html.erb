<div class="space-y-6"
     data-controller="project-detail import-modal estimate-modal">

  <!-- ページタイトル + アクションボタン -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">案件管理</h1>
      <p class="mt-1 text-sm text-gray-500">商談・見積・契約案件の総合管理</p>
    </div>
    <div class="flex flex-wrap gap-2">
      <button class="btn-secondary"
              data-action="click->import-modal#open">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
        </svg>
        CSV/Excel取込
      </button>
      <button class="btn-secondary"
              data-action="click->estimate-modal#open">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        見積書作成
      </button>
      <button class="btn-primary">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        新規案件登録
      </button>
    </div>
  </div>

  <!-- KPI概要カード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-6">
    <div class="card p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-500">総案件数</p>
          <p class="mt-1 text-2xl font-bold text-gray-900"><%= @summary[:total_projects] %></p>
        </div>
        <div class="p-2 bg-blue-100 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="card p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-500">商談中</p>
          <p class="mt-1 text-2xl font-bold text-orange-600"><%= @summary[:negotiating] %></p>
        </div>
        <div class="p-2 bg-orange-100 rounded-lg">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="card p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-500">見積中</p>
          <p class="mt-1 text-2xl font-bold text-yellow-600"><%= @summary[:estimating] %></p>
        </div>
        <div class="p-2 bg-yellow-100 rounded-lg">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="card p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-500">確定</p>
          <p class="mt-1 text-2xl font-bold text-green-600"><%= @summary[:confirmed] %></p>
        </div>
        <div class="p-2 bg-green-100 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="card p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-500">完了</p>
          <p class="mt-1 text-2xl font-bold text-blue-600"><%= @summary[:completed] %></p>
        </div>
        <div class="p-2 bg-blue-100 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
      </div>
    </div>

    <div class="card p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-500">失注</p>
          <p class="mt-1 text-2xl font-bold text-red-600"><%= @summary[:lost] %></p>
        </div>
        <div class="p-2 bg-red-100 rounded-lg">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- 売上サマリー -->
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
    <div class="card p-5 bg-gradient-to-br from-blue-500 to-blue-600">
      <div class="text-white">
        <p class="text-sm font-medium text-blue-100">総案件金額</p>
        <p class="mt-2 text-3xl font-bold"><%= number_to_currency(@summary[:total_value], unit: "¥", precision: 0, format: "%u%n") %></p>
        <p class="mt-1 text-xs text-blue-100">全案件の合計金額</p>
      </div>
    </div>

    <div class="card p-5 bg-gradient-to-br from-green-500 to-green-600">
      <div class="text-white">
        <p class="text-sm font-medium text-green-100">月間売上予測</p>
        <p class="mt-2 text-3xl font-bold"><%= number_to_currency(@summary[:monthly_revenue], unit: "¥", precision: 0, format: "%u%n") %></p>
        <p class="mt-1 text-xs text-green-100">確定案件ベース</p>
      </div>
    </div>

    <div class="card p-5 bg-gradient-to-br from-purple-500 to-purple-600">
      <div class="text-white">
        <p class="text-sm font-medium text-purple-100">受注率</p>
        <p class="mt-2 text-3xl font-bold"><%= @summary[:success_rate] %>%</p>
        <p class="mt-1 text-xs text-purple-100">過去3ヶ月平均</p>
      </div>
    </div>
  </div>

  <!-- 検索・フィルタバー -->
  <div class="card p-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="md:col-span-1">
        <input type="text"
               placeholder="案件名・クライアント名で検索..."
               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
      </div>
      <div>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
          <option value="">ステータス: 全て</option>
          <% @filters[:statuses].each do |status| %>
            <option value="<%= status %>"><%= status %></option>
          <% end %>
        </select>
      </div>
      <div>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
          <option value="">営業担当: 全て</option>
          <% @filters[:sales_reps].each do |rep| %>
            <option value="<%= rep %>"><%= rep %></option>
          <% end %>
        </select>
      </div>
      <div>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
          <option value="">業種: 全て</option>
          <% @filters[:industries].each do |industry| %>
            <option value="<%= industry %>"><%= industry %></option>
          <% end %>
        </select>
      </div>
    </div>
  </div>

  <!-- 案件一覧テーブル -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              案件名
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              クライアント
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              ステータス
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              営業担当
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              案件金額
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              期間
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              人数
            </th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              確度
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              最終更新
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">操作</span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @projects.each do |project| %>
            <tr class="hover:bg-gray-50 transition-colors cursor-pointer"
                data-project-id="<%= project[:id] %>"
                data-action="click->project-detail#open">
              <td class="px-6 py-4">
                <div class="flex items-center">
                  <div>
                    <div class="text-sm font-medium text-gray-900"><%= project[:name] %></div>
                    <% if project[:tags].present? %>
                      <div class="flex gap-1 mt-1">
                        <% project[:tags].each do |tag| %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                            <%= tag %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= project[:client_name] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case project[:status] %>
                <% when "商談中" %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">
                    <%= project[:status] %>
                  </span>
                <% when "見積中" %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                    <%= project[:status] %>
                  </span>
                <% when "確定" %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                    <%= project[:status] %>
                  </span>
                <% when "完了" %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                    <%= project[:status] %>
                  </span>
                <% when "失注" %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                    <%= project[:status] %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= project[:sales_rep] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-medium">
                <%= number_to_currency(project[:amount], unit: "¥", precision: 0, format: "%u%n") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if project[:start_date] && project[:end_date] %>
                  <%= project[:start_date] %> 〜<br><%= project[:end_date] %>
                <% else %>
                  <span class="text-gray-400">未定</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                <%= project[:staff_count] %>名
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <div class="flex items-center justify-center">
                  <span class="text-sm font-medium text-gray-900"><%= project[:probability] %>%</span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= project[:last_updated] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium" onclick="event.stopPropagation()">
                <button class="text-blue-600 hover:text-blue-900">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                  </svg>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- ページネーション -->
    <div class="bg-white px-6 py-4 border-t border-gray-200 flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-700">
          表示中 <span class="font-medium">1</span> から <span class="font-medium"><%= @projects.count %></span> / 全 <span class="font-medium"><%= @summary[:total_projects] %></span> 件
        </p>
      </div>
      <div>
        <nav class="relative z-0 inline-flex rounded-lg shadow-sm -space-x-px">
          <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-l-lg border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-50 text-sm font-medium text-blue-600">1</a>
          <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-r-lg border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </a>
        </nav>
      </div>
    </div>
  </div>

  <!-- 詳細パネル -->
  <%= render "detail_pane" %>

  <!-- インポートモーダル -->
  <%= render "import_modal" %>

  <!-- 見積書作成モーダル -->
  <%= render "estimate_modal" %>
</div>
