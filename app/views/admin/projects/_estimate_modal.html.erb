<!-- 見積書作成モーダル -->
<div class="fixed inset-0 bg-gray-900/50 z-50 hidden"
     data-estimate-modal-target="modal"
     data-action="click->estimate-modal#closeOnBackdrop">
  <div class="flex items-center justify-center min-h-screen px-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto"
         onclick="event.stopPropagation()">
      <!-- モーダルヘッダー -->
      <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between rounded-t-xl z-10">
        <div class="flex items-center">
          <div class="p-2 bg-green-100 rounded-lg mr-3">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-gray-900">見積書作成</h3>
            <p class="text-sm text-gray-500">案件の見積書を作成してPDF出力</p>
          </div>
        </div>
        <button class="text-gray-400 hover:text-gray-600 p-2"
                data-action="click->estimate-modal#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- フォーム -->
      <form data-estimate-modal-target="form" data-action="submit->estimate-modal#submit">
        <div class="px-6 py-6 space-y-6">
          <!-- 案件選択 -->
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 flex items-center pb-2 border-b border-gray-200">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              案件情報
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  案件名 <span class="text-red-500">*</span>
                </label>
                <input type="text"
                       name="project_name"
                       required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="ECサイトリニューアルプロジェクト">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  クライアント名 <span class="text-red-500">*</span>
                </label>
                <select name="client_id"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                  <option value="">選択してください</option>
                  <option value="1">株式会社サンプルテクノロジー</option>
                  <option value="2">株式会社メガコーポレーション</option>
                  <option value="3">株式会社グローバルサービス</option>
                  <option value="4">株式会社ビッグデータソリューションズ</option>
                  <option value="5">株式会社セキュアシステムズ</option>
                  <option value="6">株式会社エンタープライズ</option>
                </select>
              </div>
            </div>
          </div>

          <!-- 見積内容 -->
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 flex items-center pb-2 border-b border-gray-200">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
              見積内容
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  単価（月額） <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                  <span class="absolute left-3 top-2 text-gray-500">¥</span>
                  <input type="number"
                         name="unit_price"
                         required
                         min="0"
                         step="1000"
                         class="w-full pl-8 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                         placeholder="850000"
                         data-action="input->estimate-modal#updatePreview">
                </div>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  人数 <span class="text-red-500">*</span>
                </label>
                <input type="number"
                       name="staff_count"
                       required
                       min="1"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="3"
                       data-action="input->estimate-modal#updatePreview">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  期間（ヶ月） <span class="text-red-500">*</span>
                </label>
                <input type="number"
                       name="months"
                       required
                       min="1"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="6"
                       data-action="input->estimate-modal#updatePreview">
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  開始予定日
                </label>
                <input type="date"
                       name="start_date"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  終了予定日
                </label>
                <input type="date"
                       name="end_date"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
              </div>
            </div>
          </div>

          <!-- 備考・特記事項 -->
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 flex items-center pb-2 border-b border-gray-200">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              備考・特記事項
            </h4>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                作業内容・備考
              </label>
              <textarea name="description"
                        rows="4"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                        placeholder="見積に関する詳細情報や特記事項を入力..."></textarea>
            </div>
          </div>

          <!-- 金額プレビュー -->
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 border border-blue-200 rounded-xl p-6">
            <h4 class="font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
              金額プレビュー
            </h4>
            <div data-estimate-modal-target="preview">
              <div class="text-center text-gray-500 py-8">
                単価・人数・期間を入力すると金額が計算されます
              </div>
            </div>
          </div>

          <!-- 出力オプション -->
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 flex items-center pb-2 border-b border-gray-200">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              出力オプション
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  見積書番号
                </label>
                <input type="text"
                       name="estimate_number"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="EST-2025-001"
                       value="EST-2025-<%= Time.current.strftime('%m%d') %>-<%= rand(100..999) %>">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  有効期限
                </label>
                <input type="date"
                       name="valid_until"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       value="<%= (Date.today + 30).strftime('%Y-%m-%d') %>">
              </div>
            </div>

            <div class="space-y-2">
              <div class="flex items-center">
                <input type="checkbox"
                       id="include_company_logo"
                       name="include_company_logo"
                       checked
                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <label for="include_company_logo" class="ml-2 block text-sm text-gray-900">
                  会社ロゴを含める
                </label>
              </div>
              <div class="flex items-center">
                <input type="checkbox"
                       id="include_terms"
                       name="include_terms"
                       checked
                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <label for="include_terms" class="ml-2 block text-sm text-gray-900">
                  お取引条件を含める
                </label>
              </div>
            </div>
          </div>
        </div>

        <!-- モーダルフッター -->
        <div class="sticky bottom-0 bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-end space-x-3 rounded-b-xl">
          <button type="button"
                  class="btn-secondary"
                  data-action="click->estimate-modal#close">
            キャンセル
          </button>
          <button type="submit"
                  class="btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            見積書をPDF出力
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
