<div class="space-y-6">
  <!-- ページヘッダー -->
  <div class="flex flex-col gap-4">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">AIスタッフマッチング</h1>
        <p class="mt-1 text-sm text-gray-500"><%= @project[:client_name] %> - <%= @project[:name] %></p>
      </div>
      <div class="flex gap-2">
        <%= link_to "案件一覧に戻る", admin_projects_path, class: "btn-secondary" %>
      </div>
    </div>

    <!-- 案件情報サマリー -->
    <div class="card p-6 bg-blue-50 border border-blue-200">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div>
          <div class="text-xs text-gray-600 mb-1">期間</div>
          <div class="font-semibold text-gray-900"><%= @project[:start_date] %> 〜 <%= @project[:end_date] %></div>
        </div>
        <div>
          <div class="text-xs text-gray-600 mb-1">必要人数</div>
          <div class="font-semibold text-gray-900"><%= @project[:staff_count] %>名</div>
        </div>
        <div>
          <div class="text-xs text-gray-600 mb-1">単価</div>
          <div class="font-semibold text-gray-900">¥<%= number_with_delimiter(@project[:unit_price]) %>/月</div>
        </div>
        <div>
          <div class="text-xs text-gray-600 mb-1">必須スキル</div>
          <div class="flex flex-wrap gap-1">
            <% @project[:required_skills].each do |skill| %>
              <span class="inline-block px-2 py-1 text-xs font-medium rounded bg-blue-100 text-blue-800"><%= skill %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- AIマッチング結果 -->
  <div class="card">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-bold text-gray-900">
          <svg class="w-5 h-5 inline-block mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
          AI マッチング候補: <%= @matched_staff.length %>名
        </h2>
        <button class="btn-primary" id="sendRecruitmentBtn">選択したスタッフに募集メール送信</button>
      </div>
    </div>

    <div class="p-6">
      <form id="recruitmentForm" action="<%= send_recruitment_admin_project_path(@project[:id]) %>" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        <div class="space-y-4">
          <% @matched_staff.each do |staff| %>
            <div class="border border-gray-200 rounded-lg hover:border-blue-300 transition-colors duration-200">
              <label class="cursor-pointer">
                <div class="p-6">
                  <div class="flex items-start gap-4">
                    <!-- チェックボックス -->
                    <div class="flex items-start pt-1">
                      <input type="checkbox" name="staff_ids[]" value="<%= staff[:id] %>" class="w-5 h-5 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                    </div>

                    <!-- スタッフ情報 -->
                    <div class="flex-1">
                      <div class="flex items-start justify-between mb-3">
                        <div class="flex items-center gap-3">
                          <h3 class="text-lg font-bold text-gray-900"><%= staff[:name] %></h3>
                          <div class="flex items-center gap-1">
                            <span class="text-2xl font-bold text-purple-600"><%= staff[:match_score] %></span>
                            <span class="text-sm text-gray-500">% マッチ</span>
                          </div>
                          <!-- 評価 -->
                          <div class="flex items-center">
                            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                            <span class="ml-1 text-sm font-semibold text-gray-900"><%= staff[:rating] %></span>
                          </div>
                        </div>

                        <!-- 稼働状況 -->
                        <div class="text-right">
                          <div class="text-sm font-medium <%= staff[:current_status].include?('待機中') ? 'text-green-600' : 'text-orange-600' %>">
                            <%= staff[:current_status] %>
                          </div>
                          <div class="text-xs text-gray-500"><%= staff[:availability] %></div>
                        </div>
                      </div>

                      <!-- マッチング理由 -->
                      <div class="mb-3 p-3 bg-purple-50 border border-purple-200 rounded-lg">
                        <div class="flex items-start gap-2">
                          <svg class="w-5 h-5 text-purple-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                          </svg>
                          <p class="text-sm text-gray-700"><%= staff[:reason] %></p>
                        </div>
                      </div>

                      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-3">
                        <div>
                          <div class="text-xs text-gray-500">経験年数</div>
                          <div class="text-sm font-semibold text-gray-900"><%= staff[:experience_years] %>年</div>
                        </div>
                        <div>
                          <div class="text-xs text-gray-500">時給単価</div>
                          <div class="text-sm font-semibold text-gray-900">¥<%= number_with_delimiter(staff[:hourly_rate]) %></div>
                        </div>
                        <div>
                          <div class="text-xs text-gray-500">過去案件数</div>
                          <div class="text-sm font-semibold text-gray-900"><%= staff[:past_projects] %>件</div>
                        </div>
                        <div>
                          <div class="text-xs text-gray-500">成功率</div>
                          <div class="text-sm font-semibold text-green-600"><%= staff[:success_rate] %>%</div>
                        </div>
                      </div>

                      <!-- スキル -->
                      <div class="mb-3">
                        <div class="text-xs text-gray-500 mb-1">保有スキル</div>
                        <div class="flex flex-wrap gap-1">
                          <% staff[:skills].each do |skill| %>
                            <% is_required = @project[:required_skills].include?(skill) %>
                            <span class="inline-block px-2 py-1 text-xs font-medium rounded <%= is_required ? 'bg-blue-100 text-blue-800 border border-blue-300' : 'bg-gray-100 text-gray-700' %>">
                              <%= skill %>
                              <% if is_required %>
                                <svg class="w-3 h-3 inline-block ml-1" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                              <% end %>
                            </span>
                          <% end %>
                        </div>
                      </div>

                      <!-- その他情報 -->
                      <div class="flex flex-wrap gap-4 text-xs text-gray-600">
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                          </svg>
                          <span><%= staff[:location] %></span>
                        </div>
                        <% if staff[:certifications].any? %>
                          <div class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                            </svg>
                            <span><%= staff[:certifications].length %>件の資格</span>
                          </div>
                        <% end %>
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                          </svg>
                          <span>直近: <%= staff[:recent_projects].join(', ') %></span>
                        </div>
                      </div>

                      <!-- 稼働可能率 -->
                      <div class="mt-3">
                        <div class="flex items-center justify-between text-xs mb-1">
                          <span class="text-gray-600">稼働可能率</span>
                          <span class="font-semibold text-gray-900"><%= staff[:availability_percentage] %>%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2">
                          <div class="bg-green-500 h-2 rounded-full" style="width: <%= staff[:availability_percentage] %>%"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </label>
            </div>
          <% end %>
        </div>

        <!-- 募集メッセージ -->
        <div class="mt-6 p-4 border border-gray-200 rounded-lg bg-gray-50">
          <label class="block text-sm font-medium text-gray-700 mb-2">募集メッセージ（オプション）</label>
          <textarea name="message" rows="4" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="スタッフに送信するメッセージを入力してください..."></textarea>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
document.getElementById('sendRecruitmentBtn').addEventListener('click', function() {
  const form = document.getElementById('recruitmentForm');
  const checkedBoxes = form.querySelectorAll('input[type="checkbox"]:checked');

  if (checkedBoxes.length === 0) {
    alert('スタッフを選択してください。');
    return;
  }

  if (confirm(`${checkedBoxes.length}名のスタッフに募集メールを送信しますか?`)) {
    form.submit();
  }
});
</script>
