<div class="space-y-6" data-controller="client-detail bulk-select">
  <!-- ページタイトル + アクションボタン -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">クライアント管理</h1>
      <p class="mt-1 text-sm text-gray-500">取引先企業の一元管理</p>
    </div>
    <div class="flex space-x-3">
      <button class="btn-secondary" data-action="click->dropdown#toggle">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        エクスポート
      </button>
      <button class="btn-primary" data-action="click->dropdown#toggle">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        新規登録
      </button>
    </div>
  </div>

  <!-- 統計サマリー -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-4">
    <div class="bg-white rounded-xl shadow-sm p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">総クライアント数</dt>
            <dd class="text-2xl font-semibold text-gray-900"><%= @summary[:total_clients] %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">稼働中</dt>
            <dd class="text-2xl font-semibold text-gray-900"><%= @summary[:active_clients] %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">総案件数</dt>
            <dd class="text-2xl font-semibold text-gray-900"><%= @summary[:total_projects] %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">月間売上</dt>
            <dd class="text-2xl font-semibold text-gray-900">
              <%= number_to_currency(@summary[:monthly_revenue], unit: "¥", precision: 0, format: "%u%n") %>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- 検索・フィルターバー -->
  <div class="bg-white shadow-sm rounded-xl p-6">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-5">
      <div class="md:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-2">フリーワード検索</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input type="text"
                 class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                 placeholder="クライアント名、担当者名で検索...">
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">業種</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
          <option value="">すべて</option>
          <% @filters[:industries].each do |industry| %>
            <option value="<%= industry %>"><%= industry %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">地域</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
          <option value="">すべて</option>
          <% @filters[:regions].each do |region| %>
            <option value="<%= region %>"><%= region %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">ステータス</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
          <option value="">すべて</option>
          <% @filters[:statuses].each do |status| %>
            <option value="<%= status %>"><%= status %></option>
          <% end %>
        </select>
      </div>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <div class="flex flex-wrap gap-2">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">
          優良
          <button class="ml-2 text-blue-600 hover:text-blue-800">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </span>
      </div>
      <button class="text-sm text-blue-600 hover:text-blue-700 font-medium">
        フィルタをクリア
      </button>
    </div>
  </div>

  <!-- 一括操作ツールバー -->
  <div class="hidden bg-blue-50 border border-blue-200 rounded-lg p-4"
       data-bulk-select-target="toolbar">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <span class="text-sm font-medium text-blue-900">
          <span data-bulk-select-target="count">0</span>件選択中
        </span>
        <div class="flex space-x-2">
          <button class="px-3 py-1 text-sm font-medium text-blue-700 bg-white border border-blue-300 rounded-lg hover:bg-blue-50"
                  data-action="click->bulk-select#bulkAction"
                  data-action-value="assign">
            担当者変更
          </button>
          <button class="px-3 py-1 text-sm font-medium text-blue-700 bg-white border border-blue-300 rounded-lg hover:bg-blue-50"
                  data-action="click->bulk-select#bulkAction"
                  data-action-value="tag">
            タグ追加
          </button>
          <button class="px-3 py-1 text-sm font-medium text-blue-700 bg-white border border-blue-300 rounded-lg hover:bg-blue-50"
                  data-action="click->bulk-select#bulkAction"
                  data-action-value="export">
            エクスポート
          </button>
        </div>
      </div>
      <button class="text-sm text-blue-600 hover:text-blue-700 font-medium">
        選択解除
      </button>
    </div>
  </div>

  <!-- クライアント一覧（カード型） -->
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @clients.each do |client| %>
      <div class="card group cursor-pointer"
           data-client-id="<%= client[:id] %>"
           data-action="click->client-detail#open">
        <!-- カードヘッダー -->
        <div class="p-5">
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-start space-x-3">
              <input type="checkbox"
                     value="<%= client[:id] %>"
                     class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                     data-bulk-select-target="checkbox"
                     data-action="click->bulk-select#toggle"
                     onclick="event.stopPropagation()">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
                  <span class="text-white font-bold text-lg"><%= client[:name][0] %></span>
                </div>
              </div>
            </div>
            <% if client[:status] == "稼働中" %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                <%= client[:status] %>
              </span>
            <% elsif client[:status] == "要確認" %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                <%= client[:status] %>
              </span>
            <% else %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                <%= client[:status] %>
              </span>
            <% end %>
          </div>

          <!-- クライアント名・情報 -->
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
            <%= client[:name] %>
          </h3>

          <div class="space-y-2 text-sm text-gray-600 mb-4">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <%= client[:industry] %>
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <%= client[:region] %>
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              担当：<%= client[:sales_rep] %>
            </div>
          </div>

          <!-- タグ -->
          <div class="flex flex-wrap gap-1 mb-4">
            <% client[:tags].each do |tag| %>
              <span class="inline-flex px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-700">
                <%= tag %>
              </span>
            <% end %>
          </div>

          <!-- 統計情報 -->
          <div class="grid grid-cols-3 gap-4 pt-4 border-t border-gray-200">
            <div class="text-center">
              <div class="text-xl font-bold text-gray-900"><%= client[:projects_count] %></div>
              <div class="text-xs text-gray-500">案件数</div>
            </div>
            <div class="text-center">
              <div class="text-xl font-bold text-gray-900"><%= client[:active_staff] %></div>
              <div class="text-xs text-gray-500">稼働中</div>
            </div>
            <div class="text-center">
              <div class="text-xs font-bold text-gray-900">
                <%= number_to_currency(client[:monthly_revenue] / 10000.0, unit: "", precision: 0) %>万
              </div>
              <div class="text-xs text-gray-500">月額</div>
            </div>
          </div>
        </div>

        <!-- カードフッター -->
        <div class="bg-gray-50 px-5 py-3 border-t border-gray-200">
          <div class="flex items-center justify-between text-xs text-gray-500">
            <span>最終接触：<%= client[:last_contact] %></span>
            <button class="text-blue-600 hover:text-blue-700 font-medium" onclick="event.stopPropagation()">
              詳細 →
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 詳細ペインオーバーレイ -->
  <div class="fixed inset-0 bg-gray-900/50 z-40 hidden"
       data-client-detail-target="overlay"
       data-action="click->client-detail#close"></div>

  <!-- 詳細ペイン -->
  <%= render partial: "admin/clients/detail_pane" %>
</div>
