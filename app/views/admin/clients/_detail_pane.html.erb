<aside class="fixed inset-y-0 right-0 w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
       data-client-detail-target="pane"
       data-controller="tab">
  <!-- ヘッダー -->
  <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 z-10">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-bold text-gray-900">クライアント詳細</h2>
      <button class="text-gray-400 hover:text-gray-600 p-2"
              data-action="click->client-detail#close">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- タブナビゲーション -->
  <div class="border-b border-gray-200 px-6">
    <nav class="-mb-px flex space-x-8">
      <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm border-blue-500 text-blue-600"
              data-tab-target="tab"
              data-tab="basic"
              data-action="click->tab#switch">
        基本情報
      </button>
      <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
              data-tab-target="tab"
              data-tab="contacts"
              data-action="click->tab#switch">
        担当者
      </button>
      <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
              data-tab-target="tab"
              data-tab="projects"
              data-action="click->tab#switch">
        案件履歴
      </button>
      <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
              data-tab-target="tab"
              data-tab="invoices"
              data-action="click->tab#switch">
        請求履歴
      </button>
    </nav>
  </div>

  <!-- タブコンテンツ：基本情報 -->
  <div class="p-6 space-y-6" data-tab-target="content" data-tab-content="basic">
    <!-- クライアント名 + ステータス -->
    <div class="flex items-start justify-between">
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">株式会社サンプルテクノロジー</h3>
        <p class="text-sm text-gray-500">カブシキガイシャサンプルテクノロジー</p>
      </div>
      <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">
        稼働中
      </span>
    </div>

    <!-- クイックアクション -->
    <div class="flex space-x-2">
      <button class="flex-1 btn-primary">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
        </svg>
        編集
      </button>
      <button class="flex-1 btn-secondary">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        メール
      </button>
    </div>

    <!-- 統計カード -->
    <div class="grid grid-cols-3 gap-4">
      <div class="bg-blue-50 rounded-lg p-4 text-center">
        <div class="text-2xl font-bold text-blue-600">5</div>
        <div class="text-xs text-gray-600 mt-1">案件数</div>
      </div>
      <div class="bg-green-50 rounded-lg p-4 text-center">
        <div class="text-2xl font-bold text-green-600">12</div>
        <div class="text-xs text-gray-600 mt-1">稼働スタッフ</div>
      </div>
      <div class="bg-purple-50 rounded-lg p-4 text-center">
        <div class="text-xl font-bold text-purple-600">450万</div>
        <div class="text-xs text-gray-600 mt-1">月間売上</div>
      </div>
    </div>

    <!-- 基本情報 -->
    <div class="space-y-4">
      <h4 class="font-semibold text-gray-900 flex items-center">
        <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
        企業情報
      </h4>

      <dl class="grid grid-cols-1 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">業種</dt>
          <dd class="mt-1 text-sm text-gray-900">IT・通信</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">所在地</dt>
          <dd class="mt-1 text-sm text-gray-900">
            〒150-0001<br>
            東京都渋谷区渋谷1-1-1
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">代表連絡先</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <div class="flex items-center mb-1">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              山田太郎
            </div>
            <div class="flex items-center mb-1">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              yamada@sample-tech.co.jp
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              03-1234-5678
            </div>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">営業担当者</dt>
          <dd class="mt-1 text-sm text-gray-900">佐藤花子</dd>
        </div>
      </dl>
    </div>

    <!-- 契約情報 -->
    <div class="space-y-4">
      <h4 class="font-semibold text-gray-900 flex items-center">
        <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        契約情報
      </h4>

      <dl class="grid grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">契約開始日</dt>
          <dd class="mt-1 text-sm text-gray-900">2024-01-15</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">契約終了日</dt>
          <dd class="mt-1 text-sm text-gray-900">2025-01-14</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">最終接触日</dt>
          <dd class="mt-1 text-sm text-gray-900">2024-11-08</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">登録日</dt>
          <dd class="mt-1 text-sm text-gray-900">2024-01-15</dd>
        </div>
      </dl>

      <!-- 残日数アラート -->
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <div class="flex">
          <svg class="w-5 h-5 text-yellow-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          <div>
            <p class="text-sm font-medium text-yellow-800">契約更新時期が近づいています</p>
            <p class="text-sm text-yellow-700 mt-1">残り64日でお話契約が終了します。更新手続きをご確認ください。</p>
          </div>
        </div>
      </div>
    </div>

    <!-- タグ -->
    <div class="space-y-4">
      <h4 class="font-semibold text-gray-900">タグ</h4>
      <div class="flex flex-wrap gap-2">
        <span class="inline-flex px-3 py-1 text-sm rounded-full bg-blue-100 text-blue-800">優良</span>
        <span class="inline-flex px-3 py-1 text-sm rounded-full bg-purple-100 text-purple-800">IT</span>
        <button class="inline-flex items-center px-3 py-1 text-sm rounded-full border-2 border-dashed border-gray-300 text-gray-500 hover:border-gray-400 hover:text-gray-700">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          タグを追加
        </button>
      </div>
    </div>
  </div>

  <!-- タブコンテンツ：担当者 -->
  <div class="p-6 space-y-4 hidden" data-tab-target="content" data-tab-content="contacts">
    <h4 class="font-semibold text-gray-900">担当者一覧</h4>
    <div class="space-y-3">
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="font-medium text-gray-900">山田太郎</p>
            <p class="text-sm text-gray-500">代表取締役</p>
          </div>
          <button class="text-blue-600 hover:text-blue-700 text-sm font-medium">詳細</button>
        </div>
        <div class="mt-3 space-y-1 text-sm text-gray-600">
          <p>📧 yamada@sample-tech.co.jp</p>
          <p>📞 03-1234-5678</p>
        </div>
      </div>
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="font-medium text-gray-900">鈴木次郎</p>
            <p class="text-sm text-gray-500">人事部長</p>
          </div>
          <button class="text-blue-600 hover:text-blue-700 text-sm font-medium">詳細</button>
        </div>
        <div class="mt-3 space-y-1 text-sm text-gray-600">
          <p>📧 suzuki@sample-tech.co.jp</p>
          <p>📞 03-1234-5679</p>
        </div>
      </div>
    </div>
    <button class="w-full btn-secondary">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      担当者を追加
    </button>
  </div>

  <!-- タブコンテンツ：案件履歴 -->
  <div class="p-6 space-y-4 hidden" data-tab-target="content" data-tab-content="projects">
    <h4 class="font-semibold text-gray-900">案件履歴（5件）</h4>
    <div class="space-y-3">
      <% 5.times do |i| %>
        <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer">
          <div class="flex items-start justify-between mb-2">
            <h5 class="font-medium text-gray-900">システム開発案件<%= 'ABCDE'[i] %></h5>
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
              進行中
            </span>
          </div>
          <div class="text-sm text-gray-600 space-y-1">
            <p>期間：2024-04-01 〜 2025-03-31</p>
            <p>配置人数：<%= [3, 5, 2, 4, 1][i] %>名</p>
            <p>月額単価：<%= [900, 1200, 600, 800, 450][i] %>万円</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- タブコンテンツ：請求履歴 -->
  <div class="p-6 space-y-4 hidden" data-tab-target="content" data-tab-content="invoices">
    <h4 class="font-semibold text-gray-900">請求履歴</h4>
    <div class="space-y-3">
      <% ['2024-11', '2024-10', '2024-09', '2024-08'].each_with_index do |month, i| %>
        <div class="border border-gray-200 rounded-lg p-4">
          <div class="flex items-center justify-between mb-2">
            <h5 class="font-medium text-gray-900"><%= month %>月分</h5>
            <% if i == 0 %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                未入金
              </span>
            <% else %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                入金済
              </span>
            <% end %>
          </div>
          <div class="text-sm space-y-1">
            <div class="flex justify-between">
              <span class="text-gray-600">請求額</span>
              <span class="font-medium text-gray-900">¥4,500,000</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">請求日</span>
              <span class="text-gray-600"><%= month %>-25</span>
            </div>
            <% if i == 0 %>
              <div class="flex justify-between">
                <span class="text-gray-600">支払期限</span>
                <span class="text-red-600 font-medium"><%= month %>-30</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</aside>
