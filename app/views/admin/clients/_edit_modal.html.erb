<!-- 編集モーダル -->
<div class="fixed inset-0 bg-gray-900/50 z-50 hidden"
     data-edit-modal-target="modal"
     data-action="click->edit-modal#closeOnBackdrop">
  <div class="flex items-center justify-center min-h-screen px-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-3xl w-full max-h-[90vh] overflow-y-auto"
         onclick="event.stopPropagation()">
      <!-- モーダルヘッダー -->
      <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between rounded-t-xl">
        <h3 class="text-xl font-bold text-gray-900">クライアント情報の編集</h3>
        <button class="text-gray-400 hover:text-gray-600 p-2"
                data-action="click->edit-modal#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- フォーム -->
      <form data-edit-modal-target="form" data-action="submit->edit-modal#submit">
        <div class="px-6 py-6 space-y-6">
          <!-- 基本情報 -->
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 flex items-center pb-2 border-b border-gray-200">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              基本情報
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  企業名 <span class="text-red-500">*</span>
                </label>
                <input type="text"
                       name="name"
                       required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="株式会社サンプル"
                       value="株式会社サンプルテクノロジー">
              </div>

              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  企業名（カナ）
                </label>
                <input type="text"
                       name="name_kana"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="カブシキガイシャサンプル"
                       value="カブシキガイシャサンプルテクノロジー">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  業種 <span class="text-red-500">*</span>
                </label>
                <select name="industry"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                  <option value="">選択してください</option>
                  <% @filters[:industries].each do |industry| %>
                    <option value="<%= industry %>" <%= 'selected' if industry == 'IT・通信' %>><%= industry %></option>
                  <% end %>
                </select>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  地域 <span class="text-red-500">*</span>
                </label>
                <select name="region"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                  <option value="">選択してください</option>
                  <% @filters[:regions].each do |region| %>
                    <option value="<%= region %>" <%= 'selected' if region == '東京' %>><%= region %></option>
                  <% end %>
                </select>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  郵便番号
                </label>
                <input type="text"
                       name="postal_code"
                       pattern="\d{3}-\d{4}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="150-0001"
                       value="150-0001">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  ステータス <span class="text-red-500">*</span>
                </label>
                <select name="status"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                  <% @filters[:statuses].each do |status| %>
                    <option value="<%= status %>" <%= 'selected' if status == '稼働中' %>><%= status %></option>
                  <% end %>
                </select>
              </div>

              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  所在地
                </label>
                <input type="text"
                       name="address"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="東京都渋谷区渋谷1-1-1"
                       value="東京都渋谷区渋谷1-1-1">
              </div>
            </div>
          </div>

          <!-- 連絡先情報 -->
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 flex items-center pb-2 border-b border-gray-200">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              連絡先情報
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  担当者名
                </label>
                <input type="text"
                       name="contact_name"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="山田太郎"
                       value="山田太郎">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  営業担当者
                </label>
                <select name="sales_rep"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                  <option value="佐藤花子" selected>佐藤花子</option>
                  <option value="田中次郎">田中次郎</option>
                  <option value="伊藤健太">伊藤健太</option>
                </select>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  メールアドレス
                </label>
                <input type="email"
                       name="contact_email"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="yamada@sample.co.jp"
                       value="yamada@sample-tech.co.jp">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  電話番号
                </label>
                <input type="tel"
                       name="contact_phone"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       placeholder="03-1234-5678"
                       value="03-1234-5678">
              </div>
            </div>
          </div>

          <!-- 契約情報 -->
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 flex items-center pb-2 border-b border-gray-200">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              契約情報
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  契約開始日
                </label>
                <input type="date"
                       name="contract_start"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       value="2024-01-15">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  契約終了日
                </label>
                <input type="date"
                       name="contract_end"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                       value="2025-01-14">
              </div>
            </div>
          </div>

          <!-- タグ -->
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 flex items-center pb-2 border-b border-gray-200">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              タグ
            </h4>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                タグ（カンマ区切り）
              </label>
              <input type="text"
                     name="tags"
                     class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                     placeholder="優良, IT, 大口"
                     value="優良, IT">
            </div>
          </div>

          <!-- 備考 -->
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 flex items-center pb-2 border-b border-gray-200">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              備考
            </h4>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                メモ・備考
              </label>
              <textarea name="notes"
                        rows="4"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                        placeholder="特記事項などを入力..."></textarea>
            </div>
          </div>
        </div>

        <!-- モーダルフッター -->
        <div class="sticky bottom-0 bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-end space-x-3 rounded-b-xl">
          <button type="button"
                  class="btn-secondary"
                  data-action="click->edit-modal#close">
            キャンセル
          </button>
          <button type="submit"
                  class="btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            保存する
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
