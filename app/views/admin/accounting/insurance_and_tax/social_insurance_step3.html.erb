<div class="p-6">
  <!-- パンくずナビゲーション -->
  <div class="mb-6">
    <%= link_to "社会保険・税務管理", admin_accounting_insurance_and_tax_index_path, class: "text-blue-600 hover:text-blue-800" %>
    <span class="text-gray-400 mx-2">/</span>
    <span class="text-gray-600">社会保険料計算</span>
    <span class="text-gray-400 mx-2">/</span>
    <span class="text-gray-900 font-semibold">ステップ3: 従業員負担分と会社負担分を計算</span>
  </div>

  <!-- ページヘッダー -->
  <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg shadow-lg p-6 mb-8 text-white">
    <h1 class="text-3xl font-bold mb-2">社会保険料計算</h1>
    <p class="text-blue-100">給与計算期間: <%= @period %></p>
  </div>

  <!-- ステップインジケーター -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-600 text-white font-bold">✓</div>
        <div class="flex-1 h-1 bg-blue-600 mx-2"></div>
      </div>
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-600 text-white font-bold">✓</div>
        <div class="flex-1 h-1 bg-blue-600 mx-2"></div>
      </div>
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-600 text-white font-bold">3</div>
        <div class="flex-1 h-1 bg-gray-300 mx-2"></div>
      </div>
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-300 text-gray-600 font-bold">4</div>
        <div class="flex-1 h-1 bg-gray-300 mx-2"></div>
      </div>
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-300 text-gray-600 font-bold">5</div>
        <div class="flex-1 h-1 bg-gray-300 mx-2"></div>
      </div>
      <div class="flex items-center">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-300 text-gray-600 font-bold">6</div>
      </div>
    </div>
    <div class="flex justify-between mt-2 text-xs text-gray-600">
      <span class="flex-1 text-center text-gray-400">標準報酬月額確認</span>
      <span class="flex-1 text-center text-gray-400">保険料率適用</span>
      <span class="flex-1 text-center font-semibold text-blue-600">負担分計算</span>
      <span class="flex-1 text-center">介護保険料</span>
      <span class="flex-1 text-center">月次保険料確定</span>
      <span class="flex-1 text-center">変更届作成</span>
    </div>
  </div>

  <!-- サマリーカード -->
  <div class="grid grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500">
      <div class="text-sm text-gray-600 mb-1">従業員負担合計</div>
      <div class="text-3xl font-bold text-green-600">¥<%= number_with_delimiter(@summary[:total_employee_burden]) %></div>
    </div>
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
      <div class="text-sm text-gray-600 mb-1">会社負担合計</div>
      <div class="text-3xl font-bold text-blue-600">¥<%= number_with_delimiter(@summary[:total_company_burden]) %></div>
    </div>
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-500">
      <div class="text-sm text-gray-600 mb-1">保険料総額</div>
      <div class="text-3xl font-bold text-gray-900">¥<%= number_with_delimiter(@summary[:total_premium]) %></div>
    </div>
  </div>

  <!-- スタッフ別保険料計算 -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-bold text-gray-900">スタッフ別社会保険料</h2>
      <p class="text-sm text-gray-600 mt-1">各スタッフの保険料内訳</p>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" rowspan="2">スタッフ</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" rowspan="2">年齢</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" rowspan="2">標準報酬月額</th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-l border-gray-300" colspan="2">健康保険</th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-l border-gray-300" colspan="2">介護保険</th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-l border-gray-300" colspan="2">厚生年金</th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-l border-gray-300" colspan="2">雇用保険</th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-l border-gray-300" colspan="2">合計</th>
          </tr>
          <tr>
            <th class="px-3 py-2 text-xs font-medium text-gray-500 border-l border-gray-300">従業員</th>
            <th class="px-3 py-2 text-xs font-medium text-gray-500">会社</th>
            <th class="px-3 py-2 text-xs font-medium text-gray-500 border-l border-gray-300">従業員</th>
            <th class="px-3 py-2 text-xs font-medium text-gray-500">会社</th>
            <th class="px-3 py-2 text-xs font-medium text-gray-500 border-l border-gray-300">従業員</th>
            <th class="px-3 py-2 text-xs font-medium text-gray-500">会社</th>
            <th class="px-3 py-2 text-xs font-medium text-gray-500 border-l border-gray-300">従業員</th>
            <th class="px-3 py-2 text-xs font-medium text-gray-500">会社</th>
            <th class="px-3 py-2 text-xs font-medium text-gray-500 border-l border-gray-300">従業員</th>
            <th class="px-3 py-2 text-xs font-medium text-gray-500">会社</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @staff_calculations.each do |staff| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= staff[:staff_name] %></div>
                <div class="text-xs text-gray-500"><%= staff[:staff_code] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= staff[:age] %>歳</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold text-gray-900">
                ¥<%= number_with_delimiter(staff[:standard_monthly_remuneration]) %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right text-green-600 border-l border-gray-300">
                ¥<%= number_with_delimiter(staff[:health_insurance_employee]) %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right text-blue-600">
                ¥<%= number_with_delimiter(staff[:health_insurance_company]) %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right text-green-600 border-l border-gray-300">
                <% if staff[:nursing_care_employee] > 0 %>
                  ¥<%= number_with_delimiter(staff[:nursing_care_employee]) %>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right text-blue-600">
                <% if staff[:nursing_care_company] > 0 %>
                  ¥<%= number_with_delimiter(staff[:nursing_care_company]) %>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right text-green-600 border-l border-gray-300">
                ¥<%= number_with_delimiter(staff[:employees_pension_employee]) %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right text-blue-600">
                ¥<%= number_with_delimiter(staff[:employees_pension_company]) %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right text-green-600 border-l border-gray-300">
                ¥<%= number_with_delimiter(staff[:employment_insurance_employee]) %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right text-blue-600">
                ¥<%= number_with_delimiter(staff[:employment_insurance_company]) %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right font-bold text-green-600 border-l border-gray-300">
                ¥<%= number_with_delimiter(staff[:total_employee_burden]) %>
              </td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-right font-bold text-blue-600">
                ¥<%= number_with_delimiter(staff[:total_company_burden]) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- アクションボタン -->
  <div class="flex justify-between items-center">
    <%= link_to social_insurance_step2_admin_accounting_insurance_and_tax_path(@period), class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium" do %>
      ← 前へ
    <% end %>
    <%= button_to execute_social_insurance_step3_admin_accounting_insurance_and_tax_path(@period), method: :post, class: "px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium shadow-md" do %>
      次へ: 介護保険料の確認 →
    <% end %>
  </div>
</div>
