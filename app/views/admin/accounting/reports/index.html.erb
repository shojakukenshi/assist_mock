<div class="space-y-6" data-controller="report-detail">
  <div class="flex justify-between items-center">
    <div><h1 class="text-2xl font-bold">法定調書・報告書</h1><p class="text-sm text-gray-500">帳票出力・提出管理</p></div>
    <div class="flex gap-2">
      <select class="px-3 py-2 border rounded-lg text-sm"><option>2025年度</option><option>2024年度</option></select>
      <button class="btn-secondary text-sm">一括PDF出力</button>
      <button class="btn-primary text-sm">帳票作成</button>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-5">
    <div class="card p-4"><p class="text-xs text-gray-500">総帳票数</p><p class="mt-2 text-3xl font-bold"><%= @summary[:total_reports] %></p></div>
    <div class="card p-4"><p class="text-xs text-gray-500">提出済</p><p class="mt-2 text-3xl font-bold text-green-600"><%= @summary[:completed] %></p></div>
    <div class="card p-4"><p class="text-xs text-gray-500">作成中</p><p class="mt-2 text-3xl font-bold text-yellow-600"><%= @summary[:pending] %></p></div>
    <div class="card p-4"><p class="text-xs text-gray-500">期限超過</p><p class="mt-2 text-3xl font-bold text-red-600"><%= @summary[:overdue] %></p></div>
    <div class="card p-4"><p class="text-xs text-gray-500">完了率</p><p class="mt-2 text-3xl font-bold text-green-600"><%= @summary[:completion_rate] %>%</p></div>
  </div>
  <% if @deadline_alerts.any? %>
  <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
    <div class="flex items-start">
      <svg class="w-6 h-6 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <div class="flex-1">
        <h3 class="text-sm font-bold text-red-800">提出期限アラート</h3>
        <div class="mt-2 space-y-1">
          <% @deadline_alerts.each do |alert| %>
          <div class="text-sm text-red-700"><%= alert[:report_type] %> - 期限: <%= alert[:deadline] %> (<%= alert[:days_remaining] %>日後)</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50"><tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">帳票名</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">対象期間</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">提出期限</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">作成日</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">提出日</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">出力形式</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
      </tr></thead>
      <tbody class="divide-y divide-gray-200">
        <% @reports.each do |report| %>
        <tr class="hover:bg-gray-50 cursor-pointer" data-action="click->report-detail#open" data-report='<%= report.to_json %>'>
          <td class="px-6 py-4 text-sm font-medium"><%= report[:report_type] %></td>
          <td class="px-6 py-4 text-sm text-center"><%= report[:target_period] %></td>
          <td class="px-6 py-4 text-sm text-center <%= report[:status] == '未作成' && Date.parse(report[:deadline]) < Date.today ? 'text-red-600 font-bold' : '' %>"><%= report[:deadline] %></td>
          <td class="px-6 py-4 text-sm text-center"><%= report[:created_date] || '-' %></td>
          <td class="px-6 py-4 text-sm text-center"><%= report[:submitted_date] || '-' %></td>
          <td class="px-6 py-4 text-sm text-center"><%= report[:output_format] || '-' %></td>
          <td class="px-6 py-4 text-center">
            <% case report[:status] %>
            <% when "提出済" %>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">提出済</span>
            <% when "作成中" %>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">作成中</span>
            <% when "未提出" %>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">未提出</span>
            <% when "未作成" %>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">未作成</span>
            <% end %>
          </td>
          <td class="px-6 py-4 text-right text-sm">
            <% if report[:status] == "提出済" %>
              <button class="text-blue-600 hover:text-blue-800">再出力</button>
            <% elsif report[:status] == "未作成" %>
              <button class="text-green-600 hover:text-green-800">作成</button>
            <% else %>
              <button class="text-blue-600 hover:text-blue-800 mr-2">PDF</button>
              <button class="text-green-600 hover:text-green-800">提出</button>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- 詳細ペインオーバーレイ -->
  <div class="fixed inset-0 bg-gray-900/50 z-40 hidden"
       data-report-detail-target="overlay"
       data-action="click->report-detail#close"></div>

  <!-- 詳細ペイン -->
  <aside class="fixed inset-y-0 right-0 w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
         data-report-detail-target="panel">
    <!-- ヘッダー -->
    <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 z-10">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-900">帳票詳細</h2>
        <button class="text-gray-400 hover:text-gray-600 p-2"
                data-action="click->report-detail#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- コンテンツ -->
    <div class="p-6 space-y-6">
      <!-- 帳票名 + ステータス -->
      <div class="flex items-start justify-between">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2" data-report-detail-target="reportType"></h3>
          <p class="text-sm text-gray-500" data-report-detail-target="targetPeriod"></p>
        </div>
        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full" data-report-detail-target="statusBadge">
        </span>
      </div>

      <!-- クイックアクション -->
      <div class="flex space-x-2">
        <button class="flex-1 btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          PDF出力
        </button>
        <button class="flex-1 btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
          </svg>
          編集
        </button>
      </div>

      <!-- 基本情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          帳票情報
        </h4>

        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">帳票種別</dt>
            <dd class="mt-1 text-sm text-gray-900" data-report-detail-target="reportTypeField"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">対象期間</dt>
            <dd class="mt-1 text-sm text-gray-900" data-report-detail-target="targetPeriodField"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">出力形式</dt>
            <dd class="mt-1 text-sm text-gray-900" data-report-detail-target="outputFormat"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">ステータス</dt>
            <dd class="mt-1 text-sm text-gray-900" data-report-detail-target="status"></dd>
          </div>
        </dl>
      </div>

      <!-- 提出情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          提出情報
        </h4>

        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">作成日</dt>
            <dd class="mt-1 text-sm text-gray-900" data-report-detail-target="createdDate"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">提出期限</dt>
            <dd class="mt-1 text-sm text-gray-900" data-report-detail-target="deadline"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">提出日</dt>
            <dd class="mt-1 text-sm text-gray-900" data-report-detail-target="submittedDate"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">作成者</dt>
            <dd class="mt-1 text-sm text-gray-900" data-report-detail-target="submitter"></dd>
          </div>
        </dl>
      </div>

      <!-- 説明 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          詳細説明
        </h4>
        <p class="text-sm text-gray-600" data-report-detail-target="description"></p>
      </div>

      <!-- アクションボタン -->
      <div class="border-t pt-6 space-y-2">
        <button class="w-full btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          提出完了にする
        </button>
        <button class="w-full btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          帳票をダウンロード
        </button>
      </div>
    </div>
  </aside>
</div>
