<div class="space-y-6" data-controller="approval">
  <div class="flex justify-between items-center">
    <div><h1 class="text-2xl font-bold">経費・仕入管理</h1><p class="text-sm text-gray-500">承認処理と支払管理</p></div>
    <div class="flex gap-2">
      <button class="btn-secondary text-sm">経費登録</button>
      <button class="btn-secondary text-sm">仕入登録</button>
      <button class="btn-primary text-sm" data-action="click->approval#bulkApprove">一括承認</button>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-5">
    <div class="card p-4"><p class="text-xs text-gray-500">未承認経費</p><p class="mt-2 text-3xl font-bold text-orange-600"><%= @summary[:pending_expenses] %></p></div>
    <div class="card p-4"><p class="text-xs text-gray-500">未払仕入</p><p class="mt-2 text-3xl font-bold text-orange-600"><%= @summary[:pending_purchases] %></p></div>
    <div class="card p-4"><p class="text-xs text-gray-500">月次経費</p><p class="mt-2 text-xl font-bold"><%= number_to_currency(@summary[:monthly_expense_total], unit: "¥", precision: 0) %></p></div>
    <div class="card p-4"><p class="text-xs text-gray-500">月次仕入</p><p class="mt-2 text-xl font-bold"><%= number_to_currency(@summary[:monthly_purchase_total], unit: "¥", precision: 0) %></p></div>
    <div class="card p-4"><p class="text-xs text-gray-500">承認率</p><p class="mt-2 text-3xl font-bold text-green-600"><%= @summary[:approval_rate] %>%</p></div>
  </div>
  <div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <div class="px-6 py-4 border-b"><h3 class="font-bold">経費申請一覧</h3></div>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50"><tr>
        <th class="px-4 py-3"><input type="checkbox" data-action="change->approval#selectAll"></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">申請日</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">申請者</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">費目</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">内容</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">金額</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">領収書</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
      </tr></thead>
      <tbody class="divide-y divide-gray-200">
        <% @expense_requests.each do |exp| %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-4"><input type="checkbox" value="<%= exp[:id] %>" data-approval-target="checkbox" data-action="change->approval#toggleSelection"></td>
          <td class="px-6 py-4 text-sm"><%= exp[:request_date] %></td>
          <td class="px-6 py-4 text-sm"><%= exp[:employee_name] %></td>
          <td class="px-6 py-4 text-sm"><%= exp[:category] %></td>
          <td class="px-6 py-4 text-sm"><%= exp[:description] %></td>
          <td class="px-6 py-4 text-sm text-right font-medium"><%= number_to_currency(exp[:amount], unit: "¥", precision: 0) %></td>
          <td class="px-6 py-4 text-center"><%= exp[:receipt] ? '✓' : '-' %></td>
          <td class="px-6 py-4 text-center">
            <% case exp[:status] %>
            <% when "承認待ち" %><span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">承認待ち</span>
            <% when "承認済" %><span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">承認済</span>
            <% when "差戻し" %><span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">差戻し</span>
            <% end %>
          </td>
          <td class="px-6 py-4 text-right text-sm">
            <% if exp[:status] == "承認待ち" %>
              <button class="text-green-600 hover:text-green-800 mr-2" data-action="click->approval#approve" data-item-id="<%= exp[:id] %>" data-item-name="<%= exp[:description] %>">承認</button>
              <button class="text-red-600 hover:text-red-800" data-action="click->approval#reject" data-item-id="<%= exp[:id] %>" data-item-name="<%= exp[:description] %>">差戻</button>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="hidden fixed bottom-4 right-4 bg-white shadow-lg rounded-lg p-4 border-2 border-blue-500" data-approval-target="bulkToolbar">
    <div class="flex items-center gap-4">
      <span class="text-sm font-medium"><span data-approval-target="selectedCount">0</span>件選択中</span>
      <button class="btn-primary text-sm" data-action="click->approval#bulkApprove">一括承認</button>
      <button class="btn-secondary text-sm" data-action="click->approval#bulkReject">一括差戻</button>
    </div>
  </div>
</div>
