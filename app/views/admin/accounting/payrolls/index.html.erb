<div class="space-y-6">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">給与管理</h1>
      <p class="mt-1 text-sm text-gray-500">勤怠データ連携による自動給与計算・支払管理</p>
    </div>
    <div class="flex gap-2">
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="<%= @period %>"><%= @period %></option>
      </select>
      <button class="btn-secondary text-sm">給与計算</button>
      <button class="btn-primary text-sm">振込実行</button>
    </div>
  </div>

  <!-- KPIカード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-6">
    <div class="card p-4 bg-gradient-to-br from-blue-500 to-blue-600 text-white">
      <p class="text-xs font-medium text-blue-100">総件数</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:total_payrolls] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-orange-500 to-orange-600 text-white">
      <p class="text-xs font-medium text-orange-100">未払い</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:unpaid] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-purple-500 to-purple-600 text-white">
      <p class="text-xs font-medium text-purple-100">即払い</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:immediate_payment] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-green-500 to-green-600 text-white">
      <p class="text-xs font-medium text-green-100">総支給額</p>
      <p class="mt-2 text-xl font-bold"><%= number_to_currency(@summary[:total_amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">未払額</p>
      <p class="mt-2 text-xl font-bold text-orange-600"><%= number_to_currency(@summary[:unpaid_amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">処理率</p>
      <p class="mt-2 text-3xl font-bold text-green-600"><%= @summary[:processing_rate] %>%</p>
    </div>
  </div>

  <!-- 給与一覧テーブル -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">社員</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">部門</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">基本給</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">手当</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">残業</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">総支給</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">控除</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">差引支給</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @payrolls.each do |payroll| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= payroll[:employee_name] %></div>
                <div class="text-xs text-gray-500"><%= payroll[:employee_code] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= payroll[:department] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                <%= number_to_currency(payroll[:base_salary], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                <%= number_to_currency(payroll[:allowances], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                <%= number_to_currency(payroll[:overtime_pay], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 text-right">
                <%= number_to_currency(payroll[:total_gross], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 text-right">
                <%= number_to_currency(payroll[:deductions], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-blue-600 text-right">
                <%= number_to_currency(payroll[:net_salary], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% case payroll[:status] %>
                <% when "支払済" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">支払済</span>
                <% when "未払い" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">未払い</span>
                <% when "即払い済" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">即払い済</span>
                <% when "即払い申請中" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">申請中</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <button class="text-blue-600 hover:text-blue-800 mr-2">明細</button>
                <% if payroll[:status] == "未払い" %>
                  <button class="text-green-600 hover:text-green-800">支払</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 部門別集計 -->
  <div class="card p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">部門別支給額集計</h3>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
      <% @department_summary.each do |dept| %>
        <div class="bg-gray-50 rounded-lg p-4">
          <div class="text-sm font-medium text-gray-700 mb-2"><%= dept[:department] %></div>
          <div class="text-xs text-gray-500 mb-1"><%= dept[:count] %>名</div>
          <div class="text-lg font-bold text-gray-900">
            <%= number_to_currency(dept[:amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
