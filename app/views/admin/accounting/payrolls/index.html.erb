<div class="space-y-6" data-controller="payroll-detail">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">給与管理</h1>
      <p class="mt-1 text-sm text-gray-500">勤怠データ連携による自動給与計算・支払管理</p>
    </div>
    <div class="flex gap-2">
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="<%= @period %>"><%= @period %></option>
      </select>
      <button class="btn-secondary text-sm">給与計算</button>
      <button class="btn-primary text-sm">振込実行</button>
    </div>
  </div>

  <!-- KPIカード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-6">
    <div class="card p-4 bg-gradient-to-br from-blue-500 to-blue-600 text-white">
      <p class="text-xs font-medium text-blue-100">総件数</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:total_payrolls] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-orange-500 to-orange-600 text-white">
      <p class="text-xs font-medium text-orange-100">未払い</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:unpaid] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-purple-500 to-purple-600 text-white">
      <p class="text-xs font-medium text-purple-100">即払い</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:immediate_payment] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-green-500 to-green-600 text-white">
      <p class="text-xs font-medium text-green-100">総支給額</p>
      <p class="mt-2 text-xl font-bold"><%= number_to_currency(@summary[:total_amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">未払額</p>
      <p class="mt-2 text-xl font-bold text-orange-600"><%= number_to_currency(@summary[:unpaid_amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">処理率</p>
      <p class="mt-2 text-3xl font-bold text-green-600"><%= @summary[:processing_rate] %>%</p>
    </div>
  </div>

  <!-- 給与一覧テーブル -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">社員</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">部門</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">基本給</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">手当</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">残業</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">総支給</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">控除</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">差引支給</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @payrolls.each do |payroll| %>
            <tr class="hover:bg-gray-50 cursor-pointer"
                data-action="click->payroll-detail#open"
                data-payroll='<%= payroll.to_json %>'>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= payroll[:employee_name] %></div>
                <div class="text-xs text-gray-500"><%= payroll[:employee_code] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= payroll[:department] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                <%= number_to_currency(payroll[:base_salary], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                <%= number_to_currency(payroll[:allowances], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                <%= number_to_currency(payroll[:overtime_pay], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 text-right">
                <%= number_to_currency(payroll[:total_gross], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 text-right">
                <%= number_to_currency(payroll[:deductions], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-blue-600 text-right">
                <%= number_to_currency(payroll[:net_salary], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% case payroll[:status] %>
                <% when "支払済" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">支払済</span>
                <% when "未払い" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">未払い</span>
                <% when "即払い済" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">即払い済</span>
                <% when "即払い申請中" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">申請中</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <button class="text-blue-600 hover:text-blue-800 mr-2">明細</button>
                <% if payroll[:status] == "未払い" %>
                  <button class="text-green-600 hover:text-green-800">支払</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 部門別集計 -->
  <div class="card p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">部門別支給額集計</h3>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
      <% @department_summary.each do |dept| %>
        <div class="bg-gray-50 rounded-lg p-4">
          <div class="text-sm font-medium text-gray-700 mb-2"><%= dept[:department] %></div>
          <div class="text-xs text-gray-500 mb-1"><%= dept[:count] %>名</div>
          <div class="text-lg font-bold text-gray-900">
            <%= number_to_currency(dept[:amount], unit: "¥", precision: 0, format: "%u%n", delimiter: ",") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 詳細ペインオーバーレイ -->
  <div class="fixed inset-0 bg-gray-900/50 z-40 hidden"
       data-payroll-detail-target="overlay"
       data-action="click->payroll-detail#close"></div>

  <!-- 詳細ペイン -->
  <aside class="fixed inset-y-0 right-0 w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
         data-payroll-detail-target="panel">
    <!-- ヘッダー -->
    <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 z-10">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-900">給与明細</h2>
        <button class="text-gray-400 hover:text-gray-600 p-2"
                data-action="click->payroll-detail#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- コンテンツ -->
    <div class="p-6 space-y-6">
      <!-- 社員名 + ステータス -->
      <div class="flex items-start justify-between">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2" data-payroll-detail-target="employeeName"></h3>
          <p class="text-sm text-gray-500" data-payroll-detail-target="employeeCode"></p>
        </div>
        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full" data-payroll-detail-target="status"></span>
      </div>

      <!-- 基本情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          基本情報
        </h4>

        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">対象月</dt>
            <dd class="mt-1 text-sm text-gray-900" data-payroll-detail-target="month"></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">部門</dt>
            <dd class="mt-1 text-sm text-gray-900" data-payroll-detail-target="department"></dd>
          </div>
        </dl>
      </div>

      <!-- 給与内訳 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          給与内訳
        </h4>

        <div class="grid grid-cols-2 gap-4">
          <div class="bg-blue-50 rounded-lg p-4">
            <div class="text-xs text-gray-600 mb-1">基本給</div>
            <div class="text-xl font-bold text-blue-600" data-payroll-detail-target="baseSalary"></div>
          </div>
          <div class="bg-purple-50 rounded-lg p-4">
            <div class="text-xs text-gray-600 mb-1">残業代</div>
            <div class="text-xl font-bold text-purple-600" data-payroll-detail-target="overtimePay"></div>
          </div>
          <div class="bg-orange-50 rounded-lg p-4">
            <div class="text-xs text-gray-600 mb-1">手当</div>
            <div class="text-xl font-bold text-orange-600" data-payroll-detail-target="allowances"></div>
          </div>
          <div class="bg-red-50 rounded-lg p-4">
            <div class="text-xs text-gray-600 mb-1">控除額</div>
            <div class="text-xl font-bold text-red-600" data-payroll-detail-target="deductions"></div>
          </div>
        </div>

        <!-- 総支給額と差引支給額 -->
        <div class="space-y-3 pt-4 border-t border-gray-200">
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-700">総支給額</span>
            <span class="text-lg font-bold text-gray-900" data-payroll-detail-target="totalGross"></span>
          </div>
          <div class="flex items-center justify-between bg-green-50 rounded-lg p-4">
            <span class="text-base font-semibold text-green-900">差引支給額</span>
            <span class="text-2xl font-bold text-green-600" data-payroll-detail-target="netSalary"></span>
          </div>
        </div>
      </div>

      <!-- 支払情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          支払情報
        </h4>

        <dl class="grid grid-cols-1 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">支払予定日</dt>
            <dd class="mt-1 text-sm text-gray-900" data-payroll-detail-target="paymentDate"></dd>
          </div>
        </dl>
      </div>

      <!-- アクションボタン -->
      <div class="flex space-x-2 pt-4">
        <button class="flex-1 btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
          </svg>
          明細印刷
        </button>
        <button class="flex-1 btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          PDFダウンロード
        </button>
      </div>
    </div>
  </aside>
</div>
