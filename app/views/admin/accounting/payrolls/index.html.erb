<div class="p-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">給与管理</h1>
    <%= link_to new_admin_accounting_payroll_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
      <span class="mr-2">+</span>新規給与計算開始
    <% end %>
  </div>

  <!-- サマリー -->
  <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-xs font-medium text-gray-500 mb-1">総計算期間</div>
      <div class="text-2xl font-bold text-gray-900"><%= @summary[:total_periods] %>期間</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-xs font-medium text-gray-500 mb-1">完了済</div>
      <div class="text-2xl font-bold text-green-600"><%= @summary[:completed_periods] %>期間</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-xs font-medium text-gray-500 mb-1">進行中</div>
      <div class="text-2xl font-bold text-yellow-600"><%= @summary[:in_progress] %>期間</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-xs font-medium text-gray-500 mb-1">今年度総支払額</div>
      <div class="text-2xl font-bold text-blue-600">¥<%= number_with_delimiter(@summary[:total_paid_this_year]) %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-xs font-medium text-gray-500 mb-1">総スタッフ数</div>
      <div class="text-2xl font-bold text-purple-600"><%= @summary[:total_staff] %>名</div>
    </div>
  </div>

  <!-- 給与計算期間リスト -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">給与計算期間</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">期間</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">対象スタッフ</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">総支払額</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">給与計算</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">明細発行</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">給与振込</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">作成者</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @payroll_periods.each do |period| %>
            <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= admin_accounting_payroll_path(period[:id]) %>'">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= period[:period] %></div>
                <div class="text-xs text-gray-500"><%= period[:period_start] %> ～ <%= period[:period_end] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= period[:staff_count] %>名</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <% if period[:total_amount] > 0 %>
                  ¥<%= number_with_delimiter(period[:total_amount]) %>
                <% else %>
                  <span class="text-gray-400">未計算</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% status_class = case period[:status_calculate]
                  when "完了" then "bg-green-100 text-green-800"
                  when "進行中" then "bg-yellow-100 text-yellow-800"
                  else "bg-gray-100 text-gray-800"
                  end %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full <%= status_class %>">
                  <%= period[:status_calculate] %>
                </span>
                <% if period[:calculated_at] %>
                  <div class="text-xs text-gray-500 mt-1"><%= period[:calculated_at] %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% status_class = case period[:status_generate_slips]
                  when "完了" then "bg-green-100 text-green-800"
                  when "進行中" then "bg-yellow-100 text-yellow-800"
                  else "bg-gray-100 text-gray-800"
                  end %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full <%= status_class %>">
                  <%= period[:status_generate_slips] %>
                </span>
                <% if period[:slips_generated_at] %>
                  <div class="text-xs text-gray-500 mt-1"><%= period[:slips_generated_at] %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% status_class = case period[:status_transfer]
                  when "完了" then "bg-green-100 text-green-800"
                  when "進行中" then "bg-yellow-100 text-yellow-800"
                  else "bg-gray-100 text-gray-800"
                  end %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full <%= status_class %>">
                  <%= period[:status_transfer] %>
                </span>
                <% if period[:transferred_at] %>
                  <div class="text-xs text-gray-500 mt-1"><%= period[:transferred_at] %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= period[:created_by] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "詳細", admin_accounting_payroll_path(period[:id]), class: "text-blue-600 hover:text-blue-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
