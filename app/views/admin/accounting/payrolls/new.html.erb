<div class="p-6">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">新規給与計算開始</h1>
  <div class="bg-white rounded-lg shadow p-6 max-w-2xl">
    <form>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">給与計算期間</label>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg" value="<%= @suggested_period[:period_start] %>">
            </div>
            <div>
              <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg" value="<%= @suggested_period[:period_end] %>">
            </div>
          </div>
        </div>
        <div class="flex justify-end space-x-2 pt-4">
          <%= link_to "キャンセル", admin_accounting_payrolls_path, class: "px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50" %>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">給与計算開始</button>
        </div>
      </div>
    </form>
  </div>
</div>
