<div class="p-6">
  <!-- パンくずナビゲーション -->
  <div class="mb-6">
    <%= link_to "社会保険・税務管理", admin_accounting_insurance_index_path, class: "text-blue-600 hover:text-blue-800" %>
    <span class="text-gray-400 mx-2">/</span>
    <span class="text-gray-600">社会保険料計算</span>
    <span class="text-gray-400 mx-2">/</span>
    <span class="text-gray-900 font-semibold">ステップ5: 月次保険料を確定</span>
  </div>

  <!-- ページヘッダー -->
  <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-lg shadow-lg p-6 mb-8 text-white">
    <h1 class="text-3xl font-bold mb-2">月次保険料の確定</h1>
    <p class="text-indigo-100">給与計算期間: <%= @period %></p>
  </div>

  <!-- ステップインジケーター -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-600 text-white font-bold">✓</div>
        <div class="flex-1 h-1 bg-blue-600 mx-2"></div>
      </div>
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-600 text-white font-bold">✓</div>
        <div class="flex-1 h-1 bg-blue-600 mx-2"></div>
      </div>
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-600 text-white font-bold">✓</div>
        <div class="flex-1 h-1 bg-blue-600 mx-2"></div>
      </div>
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-600 text-white font-bold">✓</div>
        <div class="flex-1 h-1 bg-blue-600 mx-2"></div>
      </div>
      <div class="flex items-center flex-1">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-indigo-600 text-white font-bold">5</div>
        <div class="flex-1 h-1 bg-gray-300 mx-2"></div>
      </div>
      <div class="flex items-center">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-300 text-gray-600 font-bold">6</div>
      </div>
    </div>
    <div class="flex justify-between mt-2 text-xs text-gray-600">
      <span class="flex-1 text-center text-gray-400">標準報酬月額確認</span>
      <span class="flex-1 text-center text-gray-400">保険料率適用</span>
      <span class="flex-1 text-center text-gray-400">負担分計算</span>
      <span class="flex-1 text-center text-gray-400">介護保険料</span>
      <span class="flex-1 text-center font-semibold text-indigo-600">月次保険料確定</span>
      <span class="flex-1 text-center">変更届作成</span>
    </div>
  </div>

  <!-- 保険料サマリー -->
  <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
    <div class="bg-indigo-50 px-6 py-4 border-b border-indigo-200">
      <h2 class="text-2xl font-bold text-gray-900">月次保険料総括</h2>
      <p class="text-sm text-gray-600 mt-1">全社会保険料の内訳と合計</p>
    </div>

    <div class="p-8">
      <div class="grid grid-cols-3 gap-6 mb-8">
        <div class="text-center p-6 bg-green-50 rounded-lg border-2 border-green-200">
          <div class="text-sm text-gray-600 mb-2">従業員負担合計</div>
          <div class="text-4xl font-bold text-green-600">¥<%= number_with_delimiter(@monthly_premium_summary[:grand_total_employee]) %></div>
        </div>
        <div class="text-center p-6 bg-blue-50 rounded-lg border-2 border-blue-200">
          <div class="text-sm text-gray-600 mb-2">会社負担合計</div>
          <div class="text-4xl font-bold text-blue-600">¥<%= number_with_delimiter(@monthly_premium_summary[:grand_total_company]) %></div>
        </div>
        <div class="text-center p-6 bg-indigo-50 rounded-lg border-2 border-indigo-300">
          <div class="text-sm text-gray-600 mb-2">保険料総額</div>
          <div class="text-4xl font-bold text-indigo-700">¥<%= number_with_delimiter(@monthly_premium_summary[:grand_total]) %></div>
        </div>
      </div>

      <!-- 保険種別内訳 -->
      <div class="space-y-4">
        <!-- 健康保険 -->
        <div class="bg-gray-50 rounded-lg p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900">健康保険</h3>
            <span class="text-2xl font-bold text-gray-900">¥<%= number_with_delimiter(@monthly_premium_summary[:health_insurance_total]) %></span>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">従業員負担</span>
              <span class="text-lg font-semibold text-green-600">¥<%= number_with_delimiter(@monthly_premium_summary[:health_insurance_employee]) %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">会社負担</span>
              <span class="text-lg font-semibold text-blue-600">¥<%= number_with_delimiter(@monthly_premium_summary[:health_insurance_company]) %></span>
            </div>
          </div>
        </div>

        <!-- 介護保険 -->
        <div class="bg-purple-50 rounded-lg p-6 border border-purple-200">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900 flex items-center">
              介護保険
              <span class="ml-2 text-xs bg-purple-200 text-purple-800 px-2 py-1 rounded">40歳以上</span>
            </h3>
            <span class="text-2xl font-bold text-purple-700">¥<%= number_with_delimiter(@monthly_premium_summary[:nursing_care_total]) %></span>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">従業員負担</span>
              <span class="text-lg font-semibold text-green-600">¥<%= number_with_delimiter(@monthly_premium_summary[:nursing_care_employee]) %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">会社負担</span>
              <span class="text-lg font-semibold text-blue-600">¥<%= number_with_delimiter(@monthly_premium_summary[:nursing_care_company]) %></span>
            </div>
          </div>
        </div>

        <!-- 厚生年金保険 -->
        <div class="bg-gray-50 rounded-lg p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900">厚生年金保険</h3>
            <span class="text-2xl font-bold text-gray-900">¥<%= number_with_delimiter(@monthly_premium_summary[:employees_pension_total]) %></span>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">従業員負担</span>
              <span class="text-lg font-semibold text-green-600">¥<%= number_with_delimiter(@monthly_premium_summary[:employees_pension_employee]) %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">会社負担</span>
              <span class="text-lg font-semibold text-blue-600">¥<%= number_with_delimiter(@monthly_premium_summary[:employees_pension_company]) %></span>
            </div>
          </div>
        </div>

        <!-- 雇用保険 -->
        <div class="bg-gray-50 rounded-lg p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900">雇用保険</h3>
            <span class="text-2xl font-bold text-gray-900">¥<%= number_with_delimiter(@monthly_premium_summary[:employment_insurance_total]) %></span>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">従業員負担</span>
              <span class="text-lg font-semibold text-green-600">¥<%= number_with_delimiter(@monthly_premium_summary[:employment_insurance_employee]) %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">会社負担</span>
              <span class="text-lg font-semibold text-blue-600">¥<%= number_with_delimiter(@monthly_premium_summary[:employment_insurance_company]) %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 納付スケジュール -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-bold text-gray-900">納付スケジュール</h2>
      <p class="text-sm text-gray-600 mt-1">各保険料の納付期限と納付先</p>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">保険種別</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">納付期限</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">納付金額</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">納付先</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @payment_schedule.each do |payment| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= payment[:insurance_type] %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                  <%= payment[:payment_deadline] %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-bold text-gray-900">
                ¥<%= number_with_delimiter(payment[:amount]) %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= payment[:payment_destination] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- スタッフ別給与控除 -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-bold text-gray-900">スタッフ別給与控除（サンプル）</h2>
      <p class="text-sm text-gray-600 mt-1">給与から控除される社会保険料の確認</p>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">スタッフ</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">総支給額</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">社会保険料控除</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">手取り（税引前）</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @staff_deduction_list.each do |staff| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= staff[:staff_name] %></div>
                <div class="text-xs text-gray-500"><%= staff[:staff_code] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                ¥<%= number_with_delimiter(staff[:gross_pay]) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold text-red-600">
                -¥<%= number_with_delimiter(staff[:total_insurance_deduction]) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-bold text-blue-600">
                ¥<%= number_with_delimiter(staff[:net_pay_before_tax]) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- アクションボタン -->
  <div class="flex justify-between items-center">
    <%= link_to social_insurance_step4_admin_accounting_insurance_path(@period), class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium" do %>
      ← 前へ
    <% end %>
    <%= button_to execute_social_insurance_step5_admin_accounting_insurance_path(@period), method: :post, class: "px-8 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-medium shadow-md" do %>
      次へ: 変更届の確認 →
    <% end %>
  </div>
</div>
