<div class="space-y-6">
  <!-- ページヘッダー -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">スタッフ応募詳細</h1>
      <p class="mt-1 text-sm text-gray-500"><%= @project[:name] %> への応募</p>
    </div>
    <%= link_to "応募一覧に戻る", admin_project_applications_path(@project[:id]), class: "btn-secondary" %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- 左側: 応募者情報 -->
    <div class="lg:col-span-2 space-y-6">
      <!-- 応募者プロフィール -->
      <div class="card">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-bold text-gray-900">応募者情報</h2>
        </div>
        <div class="p-6">
          <div class="flex items-start gap-6 mb-6">
            <div class="flex-shrink-0">
              <div class="w-24 h-24 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white text-3xl font-bold">
                <%= @application[:staff_name][0] %>
              </div>
            </div>
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-2">
                <h3 class="text-2xl font-bold text-gray-900"><%= @application[:staff_name] %></h3>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="ml-1 text-lg font-semibold text-gray-900"><%= @application[:staff_rating] %></span>
                </div>
              </div>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <div class="text-gray-500">経験年数</div>
                  <div class="font-semibold text-gray-900"><%= @application[:staff_experience_years] %>年</div>
                </div>
                <div>
                  <div class="text-gray-500">過去案件</div>
                  <div class="font-semibold text-gray-900"><%= @application[:staff_past_projects] %>件</div>
                </div>
                <div>
                  <div class="text-gray-500">所在地</div>
                  <div class="font-semibold text-gray-900"><%= @application[:staff_location] %></div>
                </div>
                <div>
                  <div class="text-gray-500">応募日時</div>
                  <div class="font-semibold text-gray-900"><%= @application[:applied_at] %></div>
                </div>
              </div>
            </div>
          </div>

          <!-- 連絡先 -->
          <div class="border-t pt-4 mb-4">
            <h4 class="text-sm font-semibold text-gray-900 mb-3">連絡先情報</h4>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="text-gray-600"><%= @application[:staff_email] %></span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-gray-600"><%= @application[:staff_phone] %></span>
              </div>
            </div>
          </div>

          <!-- スキル -->
          <div class="border-t pt-4 mb-4">
            <h4 class="text-sm font-semibold text-gray-900 mb-3">保有スキル</h4>
            <div class="flex flex-wrap gap-2">
              <% @application[:staff_skills].each do |skill| %>
                <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-blue-100 text-blue-800">
                  <%= skill %>
                </span>
              <% end %>
            </div>
          </div>

          <!-- 資格 -->
          <% if @application[:staff_certifications].any? %>
          <div class="border-t pt-4">
            <h4 class="text-sm font-semibold text-gray-900 mb-3">保有資格</h4>
            <ul class="space-y-2">
              <% @application[:staff_certifications].each do |cert| %>
                <li class="flex items-center gap-2 text-sm text-gray-700">
                  <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <%= cert %>
                </li>
              <% end %>
            </ul>
          </div>
          <% end %>
        </div>
      </div>

      <!-- 応募メッセージ -->
      <div class="card">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-bold text-gray-900">応募メッセージ</h2>
        </div>
        <div class="p-6">
          <p class="text-gray-700 whitespace-pre-wrap"><%= @application[:message] %></p>
        </div>
      </div>
    </div>

    <!-- 右側: 配置フォーム -->
    <div class="lg:col-span-1">
      <div class="card sticky top-4">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-bold text-gray-900">配置情報入力</h2>
        </div>
        <div class="p-6">
          <%= form_with url: accept_admin_project_application_path(@project[:id], @application[:id]), method: :post, local: true do |f| %>
            <div class="space-y-4">
              <!-- 役割 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">役割 *</label>
                <%= f.text_field :role, placeholder: "例: バックエンドエンジニア", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
              </div>

              <!-- 担当業務 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">担当業務 *</label>
                <%= f.text_area :responsibilities, rows: 4, placeholder: "例:\n- API開発\n- データベース設計\n- コードレビュー", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
              </div>

              <!-- 配置期間 -->
              <div class="grid grid-cols-2 gap-3">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">開始日 *</label>
                  <%= f.date_field :start_date, value: @project[:start_date], class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">終了日 *</label>
                  <%= f.date_field :end_date, value: @project[:end_date], class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
                </div>
              </div>

              <!-- 単価 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">月額単価 (円) *</label>
                <%= f.number_field :unit_price, value: @project[:unit_price], step: 1000, placeholder: "850000", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
              </div>

              <!-- 備考 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">備考</label>
                <%= f.text_area :notes, rows: 3, placeholder: "配置に関する特記事項があれば記入してください", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
              </div>

              <!-- ボタン -->
              <div class="space-y-2 pt-4">
                <%= f.submit "配置を確定する", class: "w-full btn-primary", data: { confirm: "#{@application[:staff_name]}さんをこの案件に配置してよろしいですか?" } %>
              </div>
            </div>
          <% end %>

          <!-- お断りフォーム -->
          <div class="mt-4 pt-4 border-t border-gray-200">
            <%= form_with url: reject_admin_project_application_path(@project[:id], @application[:id]), method: :post, local: true do |f| %>
              <div class="space-y-3">
                <label class="block text-sm font-medium text-gray-700">お断りする場合</label>
                <%= f.text_area :reject_reason, rows: 2, placeholder: "お断りの理由（任意）", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 text-sm" %>
                <%= f.submit "応募をお断りする", class: "w-full btn-secondary text-red-600 hover:bg-red-50 border-red-300", data: { confirm: "#{@application[:staff_name]}さんの応募をお断りしてよろしいですか?" } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
