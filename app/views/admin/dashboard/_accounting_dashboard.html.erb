
<!-- スケジュールとTODO -->
<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <!-- 月次会計処理スケジュール（コンパクト版） -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">11月処理スケジュール</h2>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-7 gap-1 mb-3">
        <div class="text-center text-xs font-semibold text-gray-700">日</div>
        <div class="text-center text-xs font-semibold text-gray-700">月</div>
        <div class="text-center text-xs font-semibold text-gray-700">火</div>
        <div class="text-center text-xs font-semibold text-gray-700">水</div>
        <div class="text-center text-xs font-semibold text-gray-700">木</div>
        <div class="text-center text-xs font-semibold text-gray-700">金</div>
        <div class="text-center text-xs font-semibold text-gray-700">土</div>
      </div>

      <!-- 11月のカレンダー（コンパクト版） -->
      <div class="grid grid-cols-7 gap-1">
        <% (1..30).each do |day| %>
          <% date_str = "2025-11-#{day.to_s.rjust(2, '0')}" %>
          <% events = @calendar_events[date_str] %>
          <div class="aspect-square border <%= events ? 'border-blue-400 bg-blue-100' : 'border-gray-200' %> rounded p-1 hover:bg-gray-50 transition-colors">
            <div class="text-xs font-medium text-gray-900 text-center"><%= day %></div>
            <% if events %>
              <div class="w-1 h-1 mx-auto mt-0.5 rounded-full
                <%= events.first[:category] == 'payroll' ? 'bg-green-600' :
                    events.first[:category] == 'tax' ? 'bg-red-600' :
                    events.first[:category] == 'closing' ? 'bg-purple-600' : 'bg-blue-600' %>">
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="mt-3 grid grid-cols-2 gap-2 text-xs">
        <div class="flex items-center">
          <div class="w-2 h-2 bg-green-600 rounded-full mr-1.5"></div>
          <span class="text-gray-700">給与</span>
        </div>
        <div class="flex items-center">
          <div class="w-2 h-2 bg-red-600 rounded-full mr-1.5"></div>
          <span class="text-gray-700">税務</span>
        </div>
        <div class="flex items-center">
          <div class="w-2 h-2 bg-purple-600 rounded-full mr-1.5"></div>
          <span class="text-gray-700">決算</span>
        </div>
        <div class="flex items-center">
          <div class="w-2 h-2 bg-blue-600 rounded-full mr-1.5"></div>
          <span class="text-gray-700">その他</span>
        </div>
      </div>
    </div>
  </div>

  <!-- 今後のTODOリスト -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">今後のTODO</h2>
    </div>
    <div class="px-6 py-4">
      <div class="space-y-2 max-h-[400px] overflow-y-auto">
        <% @accounting_schedule.each do |schedule| %>
          <div class="flex items-start space-x-3 p-3 rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors">
            <div class="flex-shrink-0 mt-0.5">
              <div class="w-5 h-5 rounded border-2 border-gray-300 flex items-center justify-center cursor-pointer hover:border-blue-500">
                <% if schedule[:status] == "完了" %>
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                  </svg>
                <% end %>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-1">
                <span class="text-xs font-medium text-gray-500"><%= schedule[:date] %></span>
                <% case schedule[:priority] %>
                <% when "critical" %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold bg-red-100 text-red-800">最重要</span>
                <% when "high" %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-orange-100 text-orange-800">高</span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-700">中</span>
                <% end %>
              </div>
              <p class="text-sm font-medium text-gray-900 mb-1"><%= schedule[:task] %></p>
              <div class="flex items-center space-x-2">
                <% case schedule[:category] %>
                <% when "payroll" %>
                  <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">給与</span>
                <% when "tax" %>
                  <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">税務</span>
                <% when "closing" %>
                  <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">決算</span>
                <% when "insurance" %>
                  <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">社保</span>
                <% else %>
                  <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">その他</span>
                <% end %>
                <span class="text-xs text-gray-500"><%= schedule[:status] %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- アラートと期限管理 -->
<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <!-- 各種異常アラート -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">各種異常アラート</h2>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
          <%= @anomaly_alerts.length %>件
        </span>
      </div>
    </div>
    <div class="px-6 py-4">
      <ul class="space-y-3">
        <% @anomaly_alerts.each do |alert| %>
          <li class="border-l-4
            <%= alert[:severity] == 'critical' ? 'border-red-500 bg-red-50' :
                alert[:severity] == 'warning' ? 'border-yellow-500 bg-yellow-50' : 'border-blue-500 bg-blue-50' %>
            pl-4 py-3">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900"><%= alert[:type] %></div>
                <div class="text-sm text-gray-700 mt-1"><%= alert[:description] %></div>
                <div class="text-xs text-gray-500 mt-1">対象期間: <%= alert[:affected_period] %></div>
                <div class="text-sm text-gray-800 mt-2 font-medium">
                  対応: <%= alert[:action_required] %>
                </div>
              </div>
              <% if alert[:severity] == "critical" %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-red-100 text-red-800 ml-3">重大</span>
              <% elsif alert[:severity] == "warning" %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-yellow-100 text-yellow-800 ml-3">警告</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-blue-100 text-blue-800 ml-3">情報</span>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- 提出期限アラート -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">提出期限アラート</h2>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
          <%= @deadline_alerts.length %>件
        </span>
      </div>
    </div>
    <div class="px-6 py-4">
      <ul class="space-y-3">
        <% @deadline_alerts.each do |alert| %>
          <li class="border-l-4 <%= alert[:priority] == 'high' ? 'border-orange-500 bg-orange-50' : 'border-blue-500 bg-blue-50' %> pl-4 py-3">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900"><%= alert[:document] %></div>
                <div class="text-sm text-gray-700 mt-1">
                  期限: <%= alert[:deadline] %>
                  <span class="font-semibold <%= alert[:days_remaining] <= 30 ? 'text-red-600' : 'text-gray-600' %>">
                    （残り<%= alert[:days_remaining] %>日）
                  </span>
                </div>
                <div class="flex items-center space-x-3 mt-2">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                    <%= alert[:status] %>
                  </span>
                  <span class="text-xs text-gray-500">担当: <%= alert[:responsible] %></span>
                </div>
              </div>
              <% if alert[:priority] == "high" %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-orange-100 text-orange-800 ml-3">重要</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-blue-100 text-blue-800 ml-3">通常</span>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- 会計処理トピックス -->
<div class="bg-white shadow-sm rounded-xl overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <h2 class="text-lg font-semibold text-gray-900">会計処理トピックス</h2>
      </div>
      <span class="text-xs text-gray-500">最新の更新情報</span>
    </div>
  </div>
  <div class="px-6 py-4">
    <div class="space-y-3">
      <% @accounting_topics.each_with_index do |topic, index| %>
        <div class="group hover:bg-gray-50 rounded-lg transition-colors p-4 border border-gray-100 hover:border-gray-300">
          <div class="flex items-start space-x-4">
            <!-- 日付バッジ -->
            <div class="flex-shrink-0 text-center">
              <div class="bg-blue-600 text-white rounded-lg px-3 py-2 min-w-[60px]">
                <div class="text-xs font-medium"><%= Date.parse(topic[:date]).strftime("%-m月") rescue topic[:date].split('-')[1] + '月' %></div>
                <div class="text-lg font-bold leading-none"><%= Date.parse(topic[:date]).strftime("%-d") rescue topic[:date].split('-')[2] %></div>
              </div>
            </div>

            <!-- コンテンツ -->
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= topic[:importance] == 'warning' ? 'bg-yellow-100 text-yellow-800 border border-yellow-200' : 'bg-blue-100 text-blue-800 border border-blue-200' %>">
                    <%= topic[:category] %>
                  </span>
                  <% if topic[:importance] == 'warning' %>
                    <span class="inline-flex items-center text-xs text-yellow-600">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                      </svg>
                      要注意
                    </span>
                  <% end %>
                </div>
              </div>
              <h3 class="text-sm font-semibold text-gray-900 mb-1 group-hover:text-blue-600 transition-colors">
                <%= topic[:title] %>
              </h3>
              <p class="text-sm text-gray-600 line-clamp-2">
                <%= topic[:description] %>
              </p>
            </div>

            <!-- アイコン -->
            <div class="flex-shrink-0">
              <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
