<!-- 月次処理進捗サマリー -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
  <div class="bg-white overflow-hidden shadow-sm rounded-xl">
    <div class="p-5">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm font-medium text-gray-500">給与計算</div>
          <div class="text-2xl font-semibold text-gray-900 mt-1"><%= @monthly_processing_summary[:payroll_calculation][:completion_rate] %>%</div>
          <div class="text-xs text-gray-500 mt-1">期限: <%= @monthly_processing_summary[:payroll_calculation][:due_date] %></div>
        </div>
        <div class="flex-shrink-0">
          <% if @monthly_processing_summary[:payroll_calculation][:status] == "完了" %>
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
          <% else %>
            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-3">
        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= @monthly_processing_summary[:payroll_calculation][:status] == '完了' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
          <%= @monthly_processing_summary[:payroll_calculation][:status] %>
        </span>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow-sm rounded-xl">
    <div class="p-5">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm font-medium text-gray-500">給与明細発行</div>
          <div class="text-2xl font-semibold text-gray-900 mt-1"><%= @monthly_processing_summary[:payslip_issuance][:completion_rate] %>%</div>
          <div class="text-xs text-gray-500 mt-1">期限: <%= @monthly_processing_summary[:payslip_issuance][:due_date] %></div>
        </div>
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
        </div>
      </div>
      <div class="mt-3">
        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
          <%= @monthly_processing_summary[:payslip_issuance][:status] %>
        </span>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow-sm rounded-xl">
    <div class="p-5">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm font-medium text-gray-500">給与振込</div>
          <div class="text-2xl font-semibold text-gray-900 mt-1"><%= @monthly_processing_summary[:payment_transfer][:completion_rate] %>%</div>
          <div class="text-xs text-gray-500 mt-1">期限: <%= @monthly_processing_summary[:payment_transfer][:due_date] %></div>
        </div>
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
        </div>
      </div>
      <div class="mt-3">
        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
          <%= @monthly_processing_summary[:payment_transfer][:status] %>
        </span>
      </div>
    </div>
  </div>
</div>

<!-- 月次会計処理スケジュール（カレンダー） -->
<div class="bg-white shadow-sm rounded-xl overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">月次会計処理スケジュール</h2>
  </div>
  <div class="px-6 py-6">
    <div class="grid grid-cols-7 gap-2 mb-4">
      <div class="text-center text-xs font-semibold text-gray-700">日</div>
      <div class="text-center text-xs font-semibold text-gray-700">月</div>
      <div class="text-center text-xs font-semibold text-gray-700">火</div>
      <div class="text-center text-xs font-semibold text-gray-700">水</div>
      <div class="text-center text-xs font-semibold text-gray-700">木</div>
      <div class="text-center text-xs font-semibold text-gray-700">金</div>
      <div class="text-center text-xs font-semibold text-gray-700">土</div>
    </div>

    <!-- 11月のカレンダー（簡易版） -->
    <div class="grid grid-cols-7 gap-2">
      <% (1..30).each do |day| %>
        <% date_str = "2025-11-#{day.to_s.rjust(2, '0')}" %>
        <% events = @calendar_events[date_str] %>
        <div class="aspect-square border <%= events ? 'border-blue-300 bg-blue-50' : 'border-gray-200' %> rounded-lg p-2 hover:bg-gray-50 transition-colors">
          <div class="text-sm font-medium text-gray-900 mb-1"><%= day %></div>
          <% if events %>
            <% events.each do |event| %>
              <div class="text-xs font-semibold mb-1
                <%= event[:category] == 'payroll' ? 'text-green-700' :
                    event[:category] == 'tax' ? 'text-red-700' :
                    event[:category] == 'closing' ? 'text-purple-700' : 'text-blue-700' %>">
                <%= event[:task] %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-4 flex items-center space-x-6 text-xs">
      <div class="flex items-center">
        <div class="w-3 h-3 bg-green-100 border border-green-300 rounded mr-2"></div>
        <span class="text-gray-700">給与処理</span>
      </div>
      <div class="flex items-center">
        <div class="w-3 h-3 bg-red-100 border border-red-300 rounded mr-2"></div>
        <span class="text-gray-700">税務処理</span>
      </div>
      <div class="flex items-center">
        <div class="w-3 h-3 bg-purple-100 border border-purple-300 rounded mr-2"></div>
        <span class="text-gray-700">決算処理</span>
      </div>
      <div class="flex items-center">
        <div class="w-3 h-3 bg-blue-100 border border-blue-300 rounded mr-2"></div>
        <span class="text-gray-700">その他</span>
      </div>
    </div>
  </div>
</div>

<!-- アラートと期限管理 -->
<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <!-- 各種異常アラート -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">各種異常アラート</h2>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
          <%= @anomaly_alerts.length %>件
        </span>
      </div>
    </div>
    <div class="px-6 py-4">
      <ul class="space-y-3">
        <% @anomaly_alerts.each do |alert| %>
          <li class="border-l-4
            <%= alert[:severity] == 'critical' ? 'border-red-500 bg-red-50' :
                alert[:severity] == 'warning' ? 'border-yellow-500 bg-yellow-50' : 'border-blue-500 bg-blue-50' %>
            pl-4 py-3">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900"><%= alert[:type] %></div>
                <div class="text-sm text-gray-700 mt-1"><%= alert[:description] %></div>
                <div class="text-xs text-gray-500 mt-1">対象期間: <%= alert[:affected_period] %></div>
                <div class="text-sm text-gray-800 mt-2 font-medium">
                  対応: <%= alert[:action_required] %>
                </div>
              </div>
              <% if alert[:severity] == "critical" %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-red-100 text-red-800 ml-3">重大</span>
              <% elsif alert[:severity] == "warning" %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-yellow-100 text-yellow-800 ml-3">警告</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-blue-100 text-blue-800 ml-3">情報</span>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- 提出期限アラート -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">提出期限アラート</h2>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
          <%= @deadline_alerts.length %>件
        </span>
      </div>
    </div>
    <div class="px-6 py-4">
      <ul class="space-y-3">
        <% @deadline_alerts.each do |alert| %>
          <li class="border-l-4 <%= alert[:priority] == 'high' ? 'border-orange-500 bg-orange-50' : 'border-blue-500 bg-blue-50' %> pl-4 py-3">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900"><%= alert[:document] %></div>
                <div class="text-sm text-gray-700 mt-1">
                  期限: <%= alert[:deadline] %>
                  <span class="font-semibold <%= alert[:days_remaining] <= 30 ? 'text-red-600' : 'text-gray-600' %>">
                    （残り<%= alert[:days_remaining] %>日）
                  </span>
                </div>
                <div class="flex items-center space-x-3 mt-2">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                    <%= alert[:status] %>
                  </span>
                  <span class="text-xs text-gray-500">担当: <%= alert[:responsible] %></span>
                </div>
              </div>
              <% if alert[:priority] == "high" %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-orange-100 text-orange-800 ml-3">重要</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-blue-100 text-blue-800 ml-3">通常</span>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- 会計処理トピックス -->
<div class="bg-white shadow-sm rounded-xl overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">会計処理トピックス</h2>
  </div>
  <div class="px-6 py-4">
    <div class="space-y-4">
      <% @accounting_topics.each do |topic| %>
        <div class="border-l-4
          <%= topic[:importance] == 'warning' ? 'border-yellow-500 bg-yellow-50' : 'border-blue-500 bg-blue-50' %>
          pl-4 py-3">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-2">
                <span class="text-xs text-gray-500"><%= topic[:date] %></span>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                  <%= topic[:importance] == 'warning' ? 'bg-yellow-100 text-yellow-800' : 'bg-blue-100 text-blue-800' %>">
                  <%= topic[:category] %>
                </span>
              </div>
              <div class="text-sm font-medium text-gray-900 mt-2"><%= topic[:title] %></div>
              <div class="text-sm text-gray-700 mt-1"><%= topic[:description] %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- 今後のスケジュール -->
<div class="bg-white shadow-sm rounded-xl overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">今後の処理スケジュール</h2>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">日付</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">処理内容</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">カテゴリ</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ステータス</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">優先度</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @accounting_schedule.each do |schedule| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= schedule[:date] %></td>
            <td class="px-6 py-4 text-sm text-gray-900"><%= schedule[:task] %></td>
            <td class="px-6 py-4">
              <% case schedule[:category] %>
              <% when "payroll" %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">給与処理</span>
              <% when "tax" %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">税務処理</span>
              <% when "closing" %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">決算処理</span>
              <% when "insurance" %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">社保処理</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">その他</span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                <%= schedule[:status] %>
              </span>
            </td>
            <td class="px-6 py-4">
              <% case schedule[:priority] %>
              <% when "critical" %>
                <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-red-100 text-red-800">最重要</span>
              <% when "high" %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">高</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">中</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
