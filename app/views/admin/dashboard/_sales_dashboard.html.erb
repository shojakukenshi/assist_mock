<!-- KPIサマリーカード -->
<div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-5">
  <div class="card p-4 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl shadow-sm">
    <div class="text-white">
      <p class="text-xs font-medium text-blue-100">総案件数</p>
      <p class="mt-2 text-3xl font-bold"><%= @project_summary[:total_deals] %></p>
      <p class="mt-1 text-xs text-blue-100">進行中の案件</p>
    </div>
  </div>

  <div class="card p-4 bg-gradient-to-br from-green-500 to-green-600 rounded-xl shadow-sm">
    <div class="text-white">
      <p class="text-xs font-medium text-green-100">総案件金額</p>
      <p class="mt-2 text-2xl font-bold">¥<%= number_with_delimiter(@project_summary[:total_value]) %></p>
      <p class="mt-1 text-xs text-green-100">全体</p>
    </div>
  </div>

  <div class="card p-4 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl shadow-sm">
    <div class="text-white">
      <p class="text-xs font-medium text-purple-100">見込み売上</p>
      <p class="mt-2 text-2xl font-bold">¥<%= number_with_delimiter(@project_summary[:expected_revenue]) %></p>
      <p class="mt-1 text-xs text-purple-100">確度加味</p>
    </div>
  </div>

  <div class="card p-4 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl shadow-sm">
    <div class="text-white">
      <p class="text-xs font-medium text-orange-100">受注率</p>
      <p class="mt-2 text-3xl font-bold"><%= @project_summary[:success_rate] %>%</p>
      <p class="mt-1 text-xs text-orange-100">過去3ヶ月平均</p>
    </div>
  </div>

  <div class="card p-4 bg-gradient-to-br from-cyan-500 to-cyan-600 rounded-xl shadow-sm">
    <div class="text-white">
      <p class="text-xs font-medium text-cyan-100">平均リードタイム</p>
      <p class="mt-2 text-3xl font-bold"><%= @project_summary[:average_lead_time] %></p>
      <p class="mt-1 text-xs text-cyan-100">日</p>
    </div>
  </div>
</div>

<!-- 月次目標達成率グラフ（最上部に配置） -->
<div class="bg-white shadow-sm rounded-xl overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">月次目標達成率（推移）</h2>
  </div>
  <div class="px-6 py-4">
    <div style="height: 320px;">
      <canvas
        data-controller="achievement-chart"
        data-achievement-chart-data-value="<%= {
          labels: @monthly_achievement.map { |m| m[:month] },
          actual: @monthly_achievement.map { |m| m[:actual] },
          target: @monthly_achievement.map { |m| m[:target] },
          rate: @monthly_achievement.map { |m| m[:rate] }
        }.to_json %>"
      ></canvas>
    </div>
  </div>
</div>

<!-- アクションリストと経費登録 -->
<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
  <!-- 近日中のアクションリスト -->
  <div class="lg:col-span-2">
    <div class="bg-white shadow-sm rounded-xl overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">近日中のアクションリスト</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">アクション</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">クライアント</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">期限</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">優先度</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ステータス</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @action_list.each do |action| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900"><%= action[:title] %></div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= action[:client] %></td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= action[:deadline] %></td>
                <td class="px-6 py-4">
                  <% if action[:priority] == "high" %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">高</span>
                  <% else %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">中</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= action[:status] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- 経費登録通知 -->
  <div class="lg:col-span-1">
    <div class="bg-white shadow-sm rounded-xl overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">経費登録通知</h2>
      </div>
      <div class="px-6 py-4">
        <ul class="space-y-3">
          <% @expense_notifications.each do |expense| %>
            <li class="border-l-4 border-yellow-400 pl-4 py-2 bg-yellow-50">
              <div class="text-sm font-medium text-gray-900"><%= expense[:staff_name] %></div>
              <div class="text-sm text-gray-600"><%= expense[:project] %></div>
              <div class="text-sm text-gray-500 mt-1">
                ¥<%= number_with_delimiter(expense[:amount]) %> - <%= expense[:date] %>
              </div>
              <span class="inline-flex mt-2 px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                <%= expense[:status] %>
              </span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- 入金遅延アラート -->
<div class="bg-white shadow-sm rounded-xl overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">入金遅延アラート</h2>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
        <%= @payment_delay_alerts.length %>件
      </span>
    </div>
  </div>
  <div class="px-6 py-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @payment_delay_alerts.each do |alert| %>
        <div class="border-l-4 border-red-500 pl-4 py-3 bg-red-50 rounded-r-lg">
          <div class="flex justify-between items-start mb-2">
            <div class="text-sm font-medium text-gray-900"><%= alert[:client] %></div>
            <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full bg-red-100 text-red-800 whitespace-nowrap ml-2">
              <%= alert[:delay_days] %>日遅延
            </span>
          </div>
          <div class="text-sm text-gray-600">請求書: <%= alert[:invoice_number] %></div>
          <div class="text-sm text-gray-600">金額: ¥<%= number_with_delimiter(alert[:amount]) %></div>
          <div class="text-sm text-gray-500 mt-1">期限: <%= alert[:due_date] %></div>
          <div class="mt-2">
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-200 text-red-900">
              <%= alert[:status] %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
