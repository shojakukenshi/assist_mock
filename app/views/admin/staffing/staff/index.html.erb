<div class="space-y-6" data-controller="staff-detail">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">スタッフ管理</h1>
      <p class="mt-1 text-sm text-gray-500">スタッフ情報・スキル・評価・資格の一元管理</p>
    </div>
    <div class="flex gap-2">
      <button class="btn-secondary text-sm">CSV出力</button>
      <button class="btn-secondary text-sm">スキル一覧</button>
      <button class="btn-primary text-sm">スタッフ登録</button>
    </div>
  </div>

  <!-- KPIカード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-6">
    <div class="card p-4 bg-gradient-to-br from-blue-500 to-blue-600 text-white">
      <p class="text-xs font-medium text-blue-100">総スタッフ数</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:total_staff] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-green-500 to-green-600 text-white">
      <p class="text-xs font-medium text-green-100">稼働中</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:active] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-purple-500 to-purple-600 text-white">
      <p class="text-xs font-medium text-purple-100">アサイン済</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:on_assignment] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-yellow-500 to-yellow-600 text-white">
      <p class="text-xs font-medium text-yellow-100">待機中</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:available] %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">休業中</p>
      <p class="mt-2 text-3xl font-bold text-gray-600"><%= @summary[:inactive] %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">資格期限接近</p>
      <p class="mt-2 text-3xl font-bold text-orange-600"><%= @summary[:cert_expiring_soon] %></p>
    </div>
  </div>

  <!-- 検索・フィルター -->
  <div class="card p-4">
    <div class="grid grid-cols-1 md:grid-cols-6 gap-3">
      <input type="text" placeholder="スタッフ名・コードで検索..." class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全てのステータス</option>
        <option>稼働中</option>
        <option>待機中</option>
        <option>休業中</option>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全てのスキル</option>
        <option>Java</option>
        <option>PHP</option>
        <option>Ruby</option>
        <option>Python</option>
        <option>JavaScript</option>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全ての地域</option>
        <option>東京都</option>
        <option>神奈川県</option>
        <option>千葉県</option>
        <option>埼玉県</option>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全てのレベル</option>
        <option>上級</option>
        <option>中級</option>
        <option>初級</option>
      </select>
      <button class="btn-secondary text-sm">検索</button>
    </div>
  </div>

  <!-- 資格有効期限アラート -->
  <% if @certification_alerts.any? %>
    <div class="card p-4 bg-orange-50 border border-orange-200">
      <div class="flex items-center gap-2 mb-3">
        <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <h3 class="text-sm font-bold text-orange-900">資格有効期限アラート</h3>
      </div>
      <div class="space-y-2">
        <% @certification_alerts.each do |alert| %>
          <div class="flex items-center justify-between text-sm bg-white rounded-lg p-3">
            <div>
              <span class="font-medium text-gray-900"><%= alert[:staff_name] %></span>
              <span class="text-gray-600">の<%= alert[:certification] %></span>
            </div>
            <div class="flex items-center gap-3">
              <span class="text-gray-600">期限: <%= alert[:expiry_date] %></span>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">
                残り<%= alert[:days_remaining] %>日
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- スタッフ一覧テーブル -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">スタッフ</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">地域</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">現在の案件</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">スキル</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">レベル</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">単価</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">評価</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">稼働可能日</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @staff.each do |staff| %>
            <tr class="hover:bg-gray-50 cursor-pointer"
                data-action="click->staff-detail#open"
                data-staff='<%= staff.to_json %>'>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= staff[:name] %></div>
                <div class="text-xs text-gray-500"><%= staff[:code] %> · <%= staff[:age] %>歳 · <%= staff[:gender] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= staff[:location] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% case staff[:work_status] %>
                <% when "稼働中" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">稼働中</span>
                <% when "待機中" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">待機中</span>
                <% when "休業中" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">休業中</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600">
                <%= staff[:current_project] || "-" %>
              </td>
              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-1">
                  <% staff[:skills].each do |skill| %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800"><%= skill %></span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% case staff[:skill_level] %>
                <% when "上級" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">上級</span>
                <% when "中級" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">中級</span>
                <% when "初級" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">初級</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                ¥<%= number_with_delimiter(staff[:hourly_rate]) %>/h
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <div class="flex items-center justify-center">
                  <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                    <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                  </svg>
                  <span class="ml-1 text-sm font-medium text-gray-900"><%= staff[:rating] %></span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-600">
                <%= staff[:availability_date] || "-" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <button class="text-blue-600 hover:text-blue-800 mr-2">詳細</button>
                <% if staff[:work_status] == "待機中" %>
                  <button class="text-green-600 hover:text-green-800">配置</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- スキル別集計 -->
  <div class="card p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">スキル別人材集計</h3>
    <div class="grid grid-cols-1 md:grid-cols-6 gap-4">
      <% @skill_summary.each do |skill| %>
        <div class="bg-gray-50 rounded-lg p-4">
          <div class="text-sm font-medium text-gray-700 mb-2"><%= skill[:skill] %></div>
          <div class="text-2xl font-bold text-gray-900 mb-1"><%= skill[:count] %>名</div>
          <div class="text-xs text-gray-500">平均単価: ¥<%= number_with_delimiter(skill[:avg_rate]) %>/h</div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 詳細パネル（スライドイン） -->
  <aside class="fixed inset-y-0 right-0 w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
         data-staff-detail-target="panel">
    <!-- ヘッダー -->
    <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 z-10">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-900">スタッフ詳細</h2>
        <button class="text-gray-400 hover:text-gray-600 p-2"
                data-action="click->staff-detail#closePanel">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- コンテンツ -->
    <div class="p-6 space-y-6">
      <!-- 基本情報 -->
      <div class="flex items-start justify-between">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2" data-staff-detail-target="name">-</h3>
          <p class="text-sm text-gray-500">
            <span data-staff-detail-target="code">-</span> ·
            <span data-staff-detail-target="age">-</span> ·
            <span data-staff-detail-target="gender">-</span>
          </p>
        </div>
        <span data-staff-detail-target="status" class="inline-flex px-3 py-1 text-sm font-semibold rounded-full">-</span>
      </div>

      <!-- クイックアクション -->
      <div class="flex space-x-2">
        <button class="flex-1 btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
          </svg>
          編集
        </button>
        <button class="flex-1 btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          メール
        </button>
      </div>

      <!-- 統計カード -->
      <div class="grid grid-cols-3 gap-4">
        <div class="bg-blue-50 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-blue-600" data-staff-detail-target="projectCount">-</div>
          <div class="text-xs text-gray-600 mt-1">案件数</div>
        </div>
        <div class="bg-green-50 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-green-600" data-staff-detail-target="workDays">-</div>
          <div class="text-xs text-gray-600 mt-1">稼働日数</div>
        </div>
        <div class="bg-purple-50 rounded-lg p-4 text-center">
          <div class="text-xl font-bold text-purple-600" data-staff-detail-target="totalHours">-</div>
          <div class="text-xs text-gray-600 mt-1">総労働時間</div>
        </div>
      </div>

      <!-- 基本情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          基本情報
        </h4>
        <dl class="grid grid-cols-1 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">所在地</dt>
            <dd class="mt-1 text-sm text-gray-900" data-staff-detail-target="location">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">電話番号</dt>
            <dd class="mt-1 text-sm text-gray-900 flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span data-staff-detail-target="phone">-</span>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">メールアドレス</dt>
            <dd class="mt-1 text-sm text-gray-900 flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span data-staff-detail-target="email">-</span>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">現在の案件</dt>
            <dd class="mt-1 text-sm text-gray-900" data-staff-detail-target="currentProject">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">稼働可能日</dt>
            <dd class="mt-1 text-sm text-gray-900" data-staff-detail-target="availabilityDate">-</dd>
          </div>
        </dl>
      </div>

      <!-- スキル情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
          スキル・評価
        </h4>
        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">スキルレベル</dt>
            <dd class="mt-1" data-staff-detail-target="skillLevel">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">評価</dt>
            <dd class="mt-1 text-sm text-gray-900 flex items-center">
              <svg class="w-4 h-4 text-yellow-400 fill-current mr-1" viewBox="0 0 20 20">
                <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
              </svg>
              <span data-staff-detail-target="rating">-</span>
            </dd>
          </div>
          <div class="col-span-2">
            <dt class="text-sm font-medium text-gray-500">時給単価</dt>
            <dd class="mt-1 text-sm font-medium text-gray-900" data-staff-detail-target="hourlyRate">-</dd>
          </div>
        </dl>

        <!-- スキル一覧 -->
        <div>
          <dt class="text-sm font-medium text-gray-500 mb-2">保有スキル</dt>
          <div class="flex flex-wrap gap-2" data-staff-detail-target="skills">
            <!-- スキルバッジがここに表示されます -->
          </div>
        </div>
      </div>
    </div>
  </aside>
</div>
