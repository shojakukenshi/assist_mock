<div class="space-y-6" data-controller="matching assignment-detail">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">スタッフ配置</h1>
      <p class="mt-1 text-sm text-gray-500">AIマッチング・スタッフ配置・アサイン管理</p>
    </div>
    <div class="flex gap-2">
      <button class="btn-secondary text-sm">配置履歴</button>
      <button class="btn-secondary text-sm">マッチング設定</button>
      <button class="btn-primary text-sm">手動配置</button>
    </div>
  </div>

  <!-- KPIカード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-5">
    <div class="card p-4 bg-gradient-to-br from-blue-500 to-blue-600 text-white">
      <p class="text-xs font-medium text-blue-100">配置待ち案件</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:total_projects] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-yellow-500 to-yellow-600 text-white">
      <p class="text-xs font-medium text-yellow-100">マッチング中</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:matching_in_progress] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-green-500 to-green-600 text-white">
      <p class="text-xs font-medium text-green-100">今月配置</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:assigned_this_month] %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">平均マッチング</p>
      <p class="mt-2 text-3xl font-bold text-green-600"><%= @summary[:avg_matching_score] %>点</p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">平均配置日数</p>
      <p class="mt-2 text-3xl font-bold text-blue-600"><%= @summary[:avg_assignment_days] %>日</p>
    </div>
  </div>

  <!-- 検索・フィルター -->
  <div class="card p-4">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-3">
      <input type="text" placeholder="案件名・クライアントで検索..." class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全てのステータス</option>
        <option>募集中</option>
        <option>マッチング中</option>
        <option>配置完了</option>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全ての優先度</option>
        <option>高</option>
        <option>中</option>
        <option>低</option>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全てのスキル</option>
        <option>Java</option>
        <option>PHP</option>
        <option>Python</option>
        <option>AWS</option>
      </select>
      <button class="btn-secondary text-sm">検索</button>
    </div>
  </div>

  <!-- 配置待ち案件一覧 -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">案件</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">必須スキル</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">レベル</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">期間</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">募集/配置</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">予算</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">優先度</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">期限</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @projects.each do |project| %>
            <tr class="hover:bg-gray-50 cursor-pointer"
                data-action="click->assignment-detail#open"
                data-project='<%= project.to_json %>'>
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900"><%= project[:project_name] %></div>
                <div class="text-xs text-gray-500"><%= project[:client_name] %> · <%= project[:location] %></div>
              </td>
              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-1">
                  <% project[:required_skills].each do |skill| %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800"><%= skill %></span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-600">
                <%= project[:skill_level] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-600">
                <%= project[:start_date] %><br>〜<%= project[:end_date] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <span class="text-lg font-bold text-gray-900"><%= project[:assigned_count] %></span>
                <span class="text-sm text-gray-500">/<%= project[:required_count] %>名</span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                ¥<%= number_with_delimiter(project[:hourly_budget]) %>/h
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% case project[:priority] %>
                <% when "高" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">高</span>
                <% when "中" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">中</span>
                <% when "低" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">低</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-600">
                <%= project[:deadline] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <button
                  class="text-blue-600 hover:text-blue-800 mr-2"
                  data-action="click->matching#openMatching"
                  data-project-id="<%= project[:id] %>"
                  data-project-name="<%= project[:project_name] %>">
                  AIマッチング
                </button>
                <button class="text-green-600 hover:text-green-800">手動配置</button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- マッチング候補サンプル（実際はモーダルで表示） -->
  <div class="card p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-bold text-gray-900">AIマッチング候補（サンプル）</h3>
      <div class="flex gap-2">
        <button class="btn-secondary text-sm">条件調整</button>
        <button class="btn-secondary text-sm">再マッチング</button>
      </div>
    </div>
    <div class="text-sm text-gray-600 mb-4">
      案件: <span class="font-medium text-gray-900">H社 ECサイトリニューアル</span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <% @matching_candidates.each do |candidate| %>
        <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-400 hover:shadow-md transition">
          <!-- マッチングスコア -->
          <div class="flex items-center justify-between mb-3">
            <span class="text-sm font-medium text-gray-700">マッチングスコア</span>
            <div class="flex items-center">
              <div class="text-2xl font-bold <%= candidate[:matching_score] >= 90 ? 'text-green-600' : candidate[:matching_score] >= 70 ? 'text-yellow-600' : 'text-gray-600' %>">
                <%= candidate[:matching_score] %>
              </div>
              <span class="text-sm text-gray-500 ml-1">点</span>
            </div>
          </div>

          <!-- スタッフ情報 -->
          <div class="mb-3">
            <div class="text-base font-bold text-gray-900 mb-1"><%= candidate[:staff_name] %></div>
            <div class="text-xs text-gray-500 mb-2"><%= candidate[:staff_code] %></div>
            <div class="flex items-center justify-between text-xs mb-2">
              <span class="text-gray-600">スキルレベル:</span>
              <span class="px-2 py-1 rounded-full bg-blue-100 text-blue-800 font-medium"><%= candidate[:skill_level] %></span>
            </div>
            <div class="flex items-center justify-between text-xs mb-2">
              <span class="text-gray-600">評価:</span>
              <div class="flex items-center">
                <svg class="w-3 h-3 text-yellow-400 fill-current" viewBox="0 0 20 20">
                  <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                </svg>
                <span class="ml-1 font-medium text-gray-900"><%= candidate[:rating] %></span>
              </div>
            </div>
            <div class="flex items-center justify-between text-xs">
              <span class="text-gray-600">単価:</span>
              <span class="font-medium text-gray-900">¥<%= number_with_delimiter(candidate[:hourly_rate]) %>/h</span>
            </div>
          </div>

          <!-- スキル -->
          <div class="mb-3">
            <div class="flex flex-wrap gap-1">
              <% candidate[:skills].each do |skill| %>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-700"><%= skill %></span>
              <% end %>
            </div>
          </div>

          <!-- マッチング理由 -->
          <div class="mb-3">
            <div class="text-xs font-medium text-gray-700 mb-2">マッチング理由</div>
            <ul class="space-y-1">
              <% candidate[:match_reasons].each do |reason| %>
                <li class="text-xs text-green-600 flex items-start">
                  <svg class="w-3 h-3 mt-0.5 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <%= reason %>
                </li>
              <% end %>
            </ul>
          </div>

          <!-- 懸念事項 -->
          <% if candidate[:concerns].any? %>
            <div class="mb-3">
              <div class="text-xs font-medium text-gray-700 mb-2">懸念事項</div>
              <ul class="space-y-1">
                <% candidate[:concerns].each do |concern| %>
                  <li class="text-xs text-orange-600 flex items-start">
                    <svg class="w-3 h-3 mt-0.5 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    <%= concern %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- アクションボタン -->
          <div class="flex gap-2">
            <button
              class="flex-1 btn-primary text-xs py-2"
              data-action="click->matching#assignStaff"
              data-staff-id="<%= candidate[:staff_id] %>"
              data-staff-name="<%= candidate[:staff_name] %>"
              data-matching-score="<%= candidate[:matching_score] %>">
              アサイン
            </button>
            <button
              class="btn-secondary text-xs py-2"
              data-action="click->matching#showCandidateDetail"
              data-staff-id="<%= candidate[:staff_id] %>"
              data-staff-name="<%= candidate[:staff_name] %>">
              詳細
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 配置履歴 -->
  <div class="card p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">最近の配置履歴</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">配置日</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">案件</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">スタッフ</th>
            <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">開始日</th>
            <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">マッチングスコア</th>
            <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @assignment_history.each do |history| %>
            <tr>
              <td class="px-4 py-3 text-sm text-gray-600"><%= history[:assignment_date] %></td>
              <td class="px-4 py-3 text-sm text-gray-900"><%= history[:project_name] %></td>
              <td class="px-4 py-3 text-sm text-gray-900"><%= history[:staff_name] %></td>
              <td class="px-4 py-3 text-sm text-gray-600 text-center"><%= history[:start_date] %></td>
              <td class="px-4 py-3 text-center">
                <span class="px-2 py-1 text-xs font-semibold rounded-full <%= history[:matching_score] >= 90 ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= history[:matching_score] %>点
                </span>
              </td>
              <td class="px-4 py-3 text-center">
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  <%= history[:status] %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 詳細パネル（スライドイン） -->
  <aside class="fixed inset-y-0 right-0 w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
         data-assignment-detail-target="panel">
    <!-- ヘッダー -->
    <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 z-10">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-900">案件詳細</h2>
        <button class="text-gray-400 hover:text-gray-600 p-2"
                data-action="click->assignment-detail#closePanel">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- コンテンツ -->
    <div class="p-6 space-y-6">
      <!-- 基本情報 -->
      <div class="flex items-start justify-between">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2" data-assignment-detail-target="projectName">-</h3>
          <p class="text-sm text-gray-500">
            <span data-assignment-detail-target="clientName">-</span> ·
            <span data-assignment-detail-target="location">-</span>
          </p>
        </div>
        <span data-assignment-detail-target="priority" class="inline-flex px-3 py-1 text-sm font-semibold rounded-full">-</span>
      </div>

      <!-- クイックアクション -->
      <div class="flex space-x-2">
        <button class="flex-1 btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          AIマッチング
        </button>
        <button class="flex-1 btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
          手動配置
        </button>
      </div>

      <!-- 配置状況カード -->
      <div class="grid grid-cols-3 gap-4">
        <div class="bg-blue-50 rounded-lg p-4 text-center">
          <div class="text-xs text-gray-600 mb-1">募集人数</div>
          <div class="text-2xl font-bold text-blue-600" data-assignment-detail-target="requiredCount">-</div>
        </div>
        <div class="bg-green-50 rounded-lg p-4 text-center">
          <div class="text-xs text-gray-600 mb-1">配置済</div>
          <div class="text-2xl font-bold text-green-600" data-assignment-detail-target="assignedCount">-</div>
        </div>
        <div class="bg-purple-50 rounded-lg p-4 text-center">
          <div class="text-xs text-gray-600 mb-1">予算単価</div>
          <div class="text-base font-bold text-purple-600" data-assignment-detail-target="hourlyBudget">-</div>
        </div>
      </div>

      <!-- 案件情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          案件情報
        </h4>
        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">スキルレベル</dt>
            <dd class="mt-1 text-sm text-gray-900" data-assignment-detail-target="skillLevel">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">配置期限</dt>
            <dd class="mt-1 text-sm text-gray-900" data-assignment-detail-target="deadline">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">開始日</dt>
            <dd class="mt-1 text-sm text-gray-900" data-assignment-detail-target="startDate">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">終了日</dt>
            <dd class="mt-1 text-sm text-gray-900" data-assignment-detail-target="endDate">-</dd>
          </div>
        </dl>
      </div>

      <!-- 必須スキル -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900">必須スキル</h4>
        <div class="flex flex-wrap gap-2" data-assignment-detail-target="requiredSkills">
          <!-- スキルバッジがここに表示されます -->
        </div>
      </div>
    </div>
  </aside>
</div>
