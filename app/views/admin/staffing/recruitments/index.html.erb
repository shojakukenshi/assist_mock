<div class="space-y-6" data-controller="recruitment-detail">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">採用管理</h1>
      <p class="mt-1 text-sm text-gray-500">応募〜面接〜内定までの採用プロセスを一元管理</p>
    </div>
    <div class="flex gap-2">
      <button class="btn-secondary text-sm">CSV取込</button>
      <button class="btn-secondary text-sm">一括通知</button>
      <button class="btn-primary text-sm">新規応募登録</button>
    </div>
  </div>

  <!-- ステータス別集計 -->
  <div class="card p-4">
    <div class="flex items-center justify-between mb-3">
      <h3 class="text-sm font-bold text-gray-700">ステータス別進捗</h3>
      <% if @selected_status.present? %>
        <%= link_to admin_staffing_recruitments_path, class: "text-xs text-blue-600 hover:text-blue-800" do %>
          フィルタ解除 ×
        <% end %>
      <% end %>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-6 gap-3">
      <% @status_summary.each do |status| %>
        <%= link_to admin_staffing_recruitments_path(status: status[:status]), class: "block" do %>
          <div class="bg-gray-50 rounded-lg p-3 text-center hover:bg-gray-100 hover:shadow-md transition cursor-pointer <%= 'ring-2 ring-' + status[:color] + '-500' if @selected_status == status[:status] %>">
            <div class="text-xs text-gray-600 mb-1"><%= status[:status] %></div>
            <div class="text-2xl font-bold text-<%= status[:color] %>-600"><%= status[:count] %></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <!-- 検索・フィルター -->
  <div class="card p-4">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-3">
      <input type="text" placeholder="応募者名で検索..." class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全てのポジション</option>
        <option>システムエンジニア</option>
        <option>Webデザイナー</option>
        <option>プロジェクトマネージャー</option>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全てのステータス</option>
        <option>アプリ応募</option>
        <option>アプリ合格</option>
        <option>アプリ面接</option>
        <option>採用</option>
        <option>不合格</option>
        <option>保留</option>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <option value="">全ての紹介元</option>
        <option>求人サイトA</option>
        <option>求人サイトB</option>
        <option>紹介</option>
        <option>リファラル</option>
      </select>
      <button class="btn-secondary text-sm">検索</button>
    </div>
  </div>


  <!-- 応募者一覧テーブル -->
  <div class="bg-white shadow-sm rounded-xl overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">応募者</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ポジション</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">経験年数</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">スキル</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">応募日</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">進捗</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">次のアクション</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @applicants.each do |applicant| %>
            <tr class="hover:bg-gray-50 cursor-pointer"
                data-action="click->recruitment-detail#openDetail"
                data-applicant='<%= applicant.to_json %>'>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= applicant[:name] %></div>
                <div class="text-xs text-gray-500"><%= applicant[:age] %>歳・<%= applicant[:gender] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= applicant[:position] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center"><%= applicant[:experience_years] %>年</td>
              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-1">
                  <% applicant[:skills].each do |skill| %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800"><%= skill %></span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= applicant[:applied_date] %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="w-24">
                  <div class="flex items-center justify-between text-xs mb-1">
                    <span class="text-gray-600"><%= applicant[:progress] %>%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-green-500 h-2 rounded-full" style="width: <%= applicant[:progress] %>%"></div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% case applicant[:status] %>
                <% when "アプリ応募" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">アプリ応募</span>
                <% when "アプリ合格" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">アプリ合格</span>
                <% when "アプリ面接" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">アプリ面接</span>
                <% when "採用" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">採用</span>
                <% when "不合格" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">不合格</span>
                <% when "保留" %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">保留</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= applicant[:next_action] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 月次採用推移 -->
  <div class="card p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">月次採用推移</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">月</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">応募者数</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">面接実施</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">採用数</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @monthly_trends.each do |trend| %>
            <tr>
              <td class="px-4 py-3 text-sm text-gray-900"><%= trend[:month] %></td>
              <td class="px-4 py-3 text-sm text-gray-900 text-right"><%= trend[:applicants] %>名</td>
              <td class="px-4 py-3 text-sm text-gray-900 text-right"><%= trend[:interviewed] %>名</td>
              <td class="px-4 py-3 text-sm font-bold text-green-600 text-right"><%= trend[:hired] %>名</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 詳細パネル（スライドイン） -->
  <div class="fixed inset-y-0 right-0 w-full md:w-2/3 lg:w-1/2 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
       data-recruitment-detail-target="panel"
       data-action="click->recruitment-detail#closeOnBackdrop">
    <div class="p-6" data-action="click->recruitment-detail#closeOnBackdrop">
      <!-- ヘッダー -->
      <div class="flex items-center justify-between mb-6 pb-4 border-b">
        <h2 class="text-2xl font-bold text-gray-900">応募者詳細</h2>
        <button class="text-gray-400 hover:text-gray-600 transition"
                data-action="click->recruitment-detail#closePanel">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- 基本情報 -->
      <div class="mb-6">
        <div class="flex items-start justify-between mb-4">
          <div>
            <h3 class="text-xl font-bold text-gray-900" data-recruitment-detail-target="name">-</h3>
            <div class="flex gap-3 mt-2 text-sm text-gray-600">
              <span data-recruitment-detail-target="age">-</span>
              <span data-recruitment-detail-target="gender">-</span>
            </div>
          </div>
          <span data-recruitment-detail-target="status" class="px-3 py-1 text-sm font-semibold rounded-full">-</span>
        </div>
      </div>

      <!-- 連絡先情報 -->
      <div class="card p-4 mb-6">
        <h4 class="text-sm font-bold text-gray-700 mb-3">連絡先</h4>
        <div class="space-y-2">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="text-sm text-gray-600" data-recruitment-detail-target="phone">-</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="text-sm text-gray-600" data-recruitment-detail-target="email">-</span>
          </div>
        </div>
      </div>

      <!-- 応募情報 -->
      <div class="card p-4 mb-6">
        <h4 class="text-sm font-bold text-gray-700 mb-3">応募情報</h4>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <div class="text-xs text-gray-500 mb-1">ポジション</div>
            <div class="text-sm font-medium text-gray-900" data-recruitment-detail-target="position">-</div>
          </div>
          <div>
            <div class="text-xs text-gray-500 mb-1">経験年数</div>
            <div class="text-sm font-medium text-gray-900" data-recruitment-detail-target="experience">-</div>
          </div>
          <div>
            <div class="text-xs text-gray-500 mb-1">応募日</div>
            <div class="text-sm font-medium text-gray-900" data-recruitment-detail-target="appliedDate">-</div>
          </div>
          <div>
            <div class="text-xs text-gray-500 mb-1">紹介元</div>
            <div class="text-sm font-medium text-gray-900" data-recruitment-detail-target="referralSource">-</div>
          </div>
        </div>
      </div>

      <!-- スキル -->
      <div class="card p-4 mb-6">
        <h4 class="text-sm font-bold text-gray-700 mb-3">スキル</h4>
        <div class="flex flex-wrap gap-2" data-recruitment-detail-target="skills">
          <!-- スキルバッジがここに表示されます -->
        </div>
      </div>

      <!-- 面接情報 -->
      <div class="card p-4 mb-6">
        <h4 class="text-sm font-bold text-gray-700 mb-3">面接情報</h4>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <div class="text-xs text-gray-500 mb-1">面接回数</div>
            <div class="text-sm font-medium text-gray-900" data-recruitment-detail-target="interviewCount">-</div>
          </div>
          <div>
            <div class="text-xs text-gray-500 mb-1">最終面接日</div>
            <div class="text-sm font-medium text-gray-900" data-recruitment-detail-target="lastInterviewDate">-</div>
          </div>
          <div class="col-span-2">
            <div class="text-xs text-gray-500 mb-1">次のアクション</div>
            <div class="text-sm font-medium text-gray-900" data-recruitment-detail-target="nextAction">-</div>
          </div>
        </div>
      </div>

      <!-- アクションボタン -->
      <div class="flex gap-3 pt-4 border-t" data-recruitment-detail-target="actionButtons">
        <!-- ボタンがここに動的に表示されます -->
      </div>
    </div>
  </div>
</div>
