<div class="space-y-6" data-controller="support-chat tab support-detail">
  <!-- ページヘッダー -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">スタッフサポート</h1>
      <p class="mt-1 text-sm text-gray-500">問い合わせ対応・お知らせ・FAQ管理</p>
    </div>
    <div class="flex gap-2">
      <button class="btn-secondary text-sm" data-action="click->support-chat#openAnnouncementModal">お知らせ作成</button>
      <button class="btn-secondary text-sm" data-action="click->support-chat#openFaqModal">FAQ作成</button>
      <button class="btn-primary text-sm">新規問い合わせ</button>
    </div>
  </div>

  <!-- KPIカード -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-6">
    <div class="card p-4 bg-gradient-to-br from-blue-500 to-blue-600 text-white">
      <p class="text-xs font-medium text-blue-100">総問い合わせ</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:total_inquiries] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-yellow-500 to-yellow-600 text-white">
      <p class="text-xs font-medium text-yellow-100">未対応</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:open] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-purple-500 to-purple-600 text-white">
      <p class="text-xs font-medium text-purple-100">対応中</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:in_progress] %></p>
    </div>
    <div class="card p-4 bg-gradient-to-br from-green-500 to-green-600 text-white">
      <p class="text-xs font-medium text-green-100">今月完了</p>
      <p class="mt-2 text-3xl font-bold"><%= @summary[:closed_this_month] %></p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">平均応答時間</p>
      <p class="mt-2 text-2xl font-bold text-blue-600"><%= @summary[:avg_response_time] %>h</p>
    </div>
    <div class="card p-4">
      <p class="text-xs font-medium text-gray-500">満足度</p>
      <p class="mt-2 text-2xl font-bold text-green-600"><%= @summary[:satisfaction_rate] %>%</p>
    </div>
  </div>

  <!-- タブナビゲーション -->
  <div class="bg-white rounded-xl shadow-sm">
    <div class="border-b border-gray-200 px-6">
      <nav class="flex -mb-px space-x-8">
        <button class="tab-button active" data-tab-target="button" data-tab-name="inquiries" data-action="click->tab#switch">
          問い合わせ
        </button>
        <button class="tab-button" data-tab-target="button" data-tab-name="announcements" data-action="click->tab#switch">
          お知らせ
        </button>
        <button class="tab-button" data-tab-target="button" data-tab-name="faq" data-action="click->tab#switch">
          FAQ
        </button>
      </nav>
    </div>

    <!-- タブコンテンツ: 問い合わせ -->
    <div class="tab-content active p-6" data-tab-target="content" data-tab-name="inquiries">
      <!-- 検索・フィルター -->
      <div class="mb-4 grid grid-cols-1 md:grid-cols-5 gap-3">
        <input type="text" placeholder="チケット番号・スタッフ名で検索..." class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
        <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
          <option value="">全てのカテゴリ</option>
          <option>勤怠・労務</option>
          <option>給与・経費</option>
          <option>契約・条件</option>
          <option>現場トラブル</option>
          <option>システム・ツール</option>
          <option>キャリア相談</option>
          <option>健康・安全</option>
        </select>
        <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
          <option value="">全てのステータス</option>
          <option>新規</option>
          <option>対応中</option>
          <option>完了</option>
        </select>
        <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
          <option value="">全ての優先度</option>
          <option>高</option>
          <option>中</option>
          <option>低</option>
        </select>
        <button class="btn-secondary text-sm">検索</button>
      </div>

      <!-- 問い合わせ一覧 -->
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">チケット番号</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">スタッフ</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">カテゴリ</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">タイトル</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">優先度</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">担当者</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">最終返信</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @inquiries.each do |inquiry| %>
              <tr class="hover:bg-gray-50 cursor-pointer"
                  data-action="click->support-detail#open"
                  data-support='<%= inquiry.to_json %>'>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= inquiry[:ticket_number] %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= inquiry[:staff_name] %></div>
                  <div class="text-xs text-gray-500"><%= inquiry[:staff_code] %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                    <%= inquiry[:category] %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= inquiry[:title] %></td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <% case inquiry[:priority] %>
                  <% when "高" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">高</span>
                  <% when "中" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">中</span>
                  <% when "低" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">低</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <% case inquiry[:status] %>
                  <% when "新規" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">新規</span>
                  <% when "対応中" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">対応中</span>
                  <% when "完了" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">完了</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= inquiry[:assigned_to] || "未割当" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= inquiry[:last_reply_at] || "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                  <button
                    class="text-blue-600 hover:text-blue-800 mr-2"
                    data-action="click->support-chat#openChat"
                    data-inquiry-id="<%= inquiry[:id] %>"
                    data-inquiry-title="<%= inquiry[:title] %>">
                    チャット
                  </button>
                  <% if inquiry[:status] != "完了" %>
                    <button
                      class="text-green-600 hover:text-green-800"
                      data-action="click->support-chat#closeInquiry"
                      data-inquiry-id="<%= inquiry[:id] %>">
                      完了
                    </button>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- タブコンテンツ: お知らせ -->
    <div class="tab-content hidden p-6" data-tab-target="content" data-tab-name="announcements">
      <div class="space-y-4">
        <% @announcements.each do |announcement| %>
          <div class="card p-4 hover:shadow-md transition">
            <div class="flex items-start justify-between mb-2">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <% case announcement[:category] %>
                  <% when "重要" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">重要</span>
                  <% when "お知らせ" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">お知らせ</span>
                  <% when "メンテナンス" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">メンテナンス</span>
                  <% when "研修" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">研修</span>
                  <% end %>
                  <h3 class="text-base font-bold text-gray-900"><%= announcement[:title] %></h3>
                </div>
                <p class="text-sm text-gray-600 mb-2"><%= announcement[:content] %></p>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500">投稿日時: <%= announcement[:posted_at] %></span>
                  <span class="text-xs text-gray-600">
                    既読: <span class="font-medium"><%= announcement[:read_count] %></span>/<%= announcement[:target_count] %>名
                    (<%= ((announcement[:read_count].to_f / announcement[:target_count]) * 100).round(1) %>%)
                  </span>
                </div>
              </div>
              <button
                class="ml-4 text-blue-600 hover:text-blue-800 text-sm"
                data-action="click->support-chat#showAnnouncement"
                data-announcement-id="<%= announcement[:id] %>"
                data-title="<%= announcement[:title] %>">
                詳細
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- タブコンテンツ: FAQ -->
    <div class="tab-content hidden p-6" data-tab-target="content" data-tab-name="faq">
      <div class="space-y-4">
        <% @faqs.each do |faq| %>
          <div class="card p-4 hover:shadow-md transition">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-700">
                    <%= faq[:category] %>
                  </span>
                  <span class="text-xs text-gray-500">閲覧数: <%= faq[:view_count] %></span>
                </div>
                <h3 class="text-base font-bold text-gray-900 mb-2"><%= faq[:question] %></h3>
                <p class="text-sm text-gray-600"><%= faq[:answer] %></p>
              </div>
              <button
                class="ml-4 text-blue-600 hover:text-blue-800 text-sm"
                data-action="click->support-chat#showFaq"
                data-faq-id="<%= faq[:id] %>"
                data-question="<%= faq[:question] %>">
                詳細
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- カテゴリ別問い合わせ集計 -->
  <div class="card p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">カテゴリ別問い合わせ集計</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">カテゴリ</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">件数</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">平均解決日数</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @category_summary.each do |category| %>
            <tr>
              <td class="px-4 py-3 text-sm text-gray-900"><%= category[:category] %></td>
              <td class="px-4 py-3 text-sm text-gray-900 text-right"><%= category[:count] %>件</td>
              <td class="px-4 py-3 text-sm text-gray-900 text-right"><%= category[:avg_resolution_days] %>日</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- チャットモーダル（サンプル） -->
  <div class="hidden fixed inset-0 z-50 bg-gray-900/75 flex items-end sm:items-center justify-center" data-support-chat-target="chatModal" data-action="click->support-chat#closeOnBackdrop">
    <div class="bg-white rounded-t-xl sm:rounded-xl shadow-xl w-full sm:max-w-2xl sm:w-full h-[80vh] sm:h-[600px] flex flex-col" onclick="event.stopPropagation()">
      <!-- チャットヘッダー -->
      <div class="bg-blue-600 text-white px-6 py-4 rounded-t-xl flex items-center justify-between">
        <div>
          <h3 class="text-lg font-bold" data-support-chat-target="inquiryTitle">問い合わせ</h3>
          <p class="text-xs text-blue-100">リアルタイムサポートチャット</p>
        </div>
        <button class="text-white hover:text-gray-200" data-action="click->support-chat#closeChat">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- チャットメッセージエリア -->
      <div class="flex-1 overflow-y-auto p-6 space-y-4 bg-gray-50" data-support-chat-target="chatMessages">
        <% @chat_messages.each do |message| %>
          <div class="flex <%= message[:sender_type] == 'support' ? 'justify-end' : 'justify-start' %>">
            <div class="max-w-[70%]">
              <div class="flex items-center gap-2 mb-1">
                <span class="text-xs font-medium text-gray-600"><%= message[:sender_name] %></span>
                <span class="text-xs text-gray-400"><%= message[:timestamp] %></span>
              </div>
              <div class="rounded-lg p-3 <%= message[:sender_type] == 'support' ? 'bg-blue-500 text-white' : 'bg-white text-gray-900' %>">
                <%= message[:message] %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- チャット入力エリア -->
      <form class="border-t border-gray-200 p-4 bg-white rounded-b-xl" data-action="submit->support-chat#sendMessage">
        <input type="hidden" data-support-chat-target="inquiryId">
        <div class="flex gap-2">
          <input
            type="text"
            placeholder="メッセージを入力..."
            class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-sm"
            data-support-chat-target="messageInput">
          <button type="submit" class="btn-primary text-sm px-6">送信</button>
        </div>
      </form>
    </div>
  </div>

  <!-- 詳細パネル（スライドイン） -->
  <aside class="fixed inset-y-0 right-0 w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
         data-support-detail-target="panel">
    <!-- ヘッダー -->
    <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 z-10">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-900">サポートリクエスト詳細</h2>
        <button class="text-gray-400 hover:text-gray-600 p-2"
                data-action="click->support-detail#closePanel">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- コンテンツ -->
    <div class="p-6 space-y-6">
      <!-- 基本情報 -->
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <h3 class="text-2xl font-bold text-gray-900 mb-2" data-support-detail-target="title">-</h3>
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <span data-support-detail-target="staffName">-</span>
            <span>·</span>
            <span data-support-detail-target="staffCode">-</span>
            <span>·</span>
            <span data-support-detail-target="ticketNumber">-</span>
          </div>
        </div>
      </div>

      <!-- ステータスと優先度 -->
      <div class="flex gap-3">
        <div class="flex-1">
          <dt class="text-xs font-medium text-gray-500 mb-1">ステータス</dt>
          <span data-support-detail-target="status" class="inline-flex px-3 py-1 text-sm font-semibold rounded-full">-</span>
        </div>
        <div class="flex-1">
          <dt class="text-xs font-medium text-gray-500 mb-1">優先度</dt>
          <span data-support-detail-target="priority" class="inline-flex px-3 py-1 text-sm font-semibold rounded-full">-</span>
        </div>
      </div>

      <!-- リクエスト詳細 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          リクエスト詳細
        </h4>
        <dl class="grid grid-cols-1 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">カテゴリ</dt>
            <dd class="mt-1 text-sm text-gray-900" data-support-detail-target="category">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">問い合わせ内容</dt>
            <dd class="mt-1 text-sm text-gray-900" data-support-detail-target="description">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">作成日時</dt>
            <dd class="mt-1 text-sm text-gray-900 flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span data-support-detail-target="createdDate">-</span>
            </dd>
          </div>
        </dl>
      </div>

      <!-- 担当情報 -->
      <div class="space-y-4">
        <h4 class="font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          担当情報
        </h4>
        <dl class="grid grid-cols-1 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">担当者</dt>
            <dd class="mt-1 text-sm text-gray-900" data-support-detail-target="assignedTo">-</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">最終更新日時</dt>
            <dd class="mt-1 text-sm text-gray-900 flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span data-support-detail-target="updatedDate">-</span>
            </dd>
          </div>
        </dl>
      </div>

      <!-- アクションボタン -->
      <div class="flex gap-3 pt-4 border-t">
        <button class="flex-1 btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
          </svg>
          チャット
        </button>
        <button class="flex-1 btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          完了
        </button>
      </div>
    </div>
  </aside>
</div>
