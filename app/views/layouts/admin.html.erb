<!DOCTYPE html>
<html lang="ja" class="h-full bg-gray-50">
  <head>
    <title>業務管理システム</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="turbo-visit-control" content="reload">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full" data-controller="admin-layout">
    <!-- サイドバーオーバーレイ (モバイル) -->
    <div class="fixed inset-0 bg-gray-900/75 z-40 lg:hidden hidden"
         data-admin-layout-target="overlay"
         data-action="click->admin-layout#closeSidebar"></div>

    <!-- サイドバー -->
    <aside class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-lg transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out"
           data-admin-layout-target="sidebar">
      <!-- ロゴ -->
      <div class="flex items-center justify-between h-16 px-6 border-b border-gray-200">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg">M</span>
          </div>
          <span class="ml-3 text-lg font-semibold text-gray-800">業務管理</span>
        </div>
        <button class="lg:hidden text-gray-500 hover:text-gray-700"
                data-action="click->admin-layout#closeSidebar">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- ナビゲーションメニュー -->
      <nav class="flex-1 overflow-y-auto py-4 px-3" data-controller="sidebar-menu">
        <!-- ダッシュボード -->
        <%= render partial: "layouts/admin/nav_item", locals: {
          icon: "home",
          label: "ダッシュボード",
          path: admin_dashboard_path,
          active: controller_name == "dashboard"
        } %>

        <!-- クライアント管理 -->
        <%= render partial: "layouts/admin/nav_item", locals: {
          icon: "users",
          label: "クライアント管理",
          path: admin_clients_path,
          active: controller_path.start_with?("admin/clients")
        } %>

        <!-- 案件管理 -->
        <%= render partial: "layouts/admin/nav_item", locals: {
          icon: "briefcase",
          label: "案件管理",
          path: admin_projects_path,
          active: controller_path.start_with?("admin/projects")
        } %>

        <!-- 営業部門メニュー -->
        <%= render partial: "layouts/admin/nav_group", locals: {
          icon: "trending-up",
          label: "営業部門",
          id: "sales",
          items: [
            { label: "案件進捗管理", path: admin_sales_pipeline_path },
            { label: "経費登録", path: admin_sales_expenses_path },
            { label: "請求・入金管理", path: admin_sales_billings_path },
            { label: "営業分析レポート", path: admin_sales_analytics_path }
          ],
          active: controller_path.start_with?("admin/sales")
        } %>

        <!-- 手配部門メニュー -->
        <%= render partial: "layouts/admin/nav_group", locals: {
          icon: "clipboard-list",
          label: "手配部門",
          id: "staffing",
          items: [
            { label: "採用管理", path: admin_staffing_recruitments_path },
            { label: "スタッフ管理", path: admin_staffing_staff_index_path },
            { label: "スタッフ配置", path: admin_staffing_assignments_path },
            { label: "勤怠管理", path: admin_staffing_attendances_path },
            { label: "スタッフサポート", path: admin_staffing_support_index_path },
            { label: "コンプライアンス管理", path: admin_staffing_compliance_index_path }
          ],
          active: controller_path.start_with?("admin/staffing")
        } %>

        <!-- 経理部門メニュー -->
        <%= render partial: "layouts/admin/nav_group", locals: {
          icon: "calculator",
          label: "経理部門",
          id: "accounting",
          items: [
            { label: "給与管理", path: admin_accounting_payrolls_path },
            { label: "社会保険・税務管理", path: admin_accounting_insurance_index_path },
            { label: "経費・仕入管理", path: admin_accounting_expenses_path },
            { label: "売上・債権管理", path: admin_accounting_receivables_path },
            { label: "財務管理・決算処理", path: admin_accounting_financials_path },
            { label: "法定調書・報告書", path: admin_accounting_reports_path }
          ],
          active: controller_path.start_with?("admin/accounting")
        } %>

        <!-- システム設定 -->
        <%= render partial: "layouts/admin/nav_group", locals: {
          icon: "cog",
          label: "システム設定",
          id: "settings",
          items: [
            { label: "社員管理", path: admin_settings_employees_path },
            { label: "マスタ管理", path: admin_settings_masters_path },
            { label: "バッチ・集計処理", path: admin_settings_batches_path },
            { label: "マイページ", path: admin_settings_mypage_path }
          ],
          active: controller_path.start_with?("admin/settings")
        } %>
      </nav>
    </aside>

    <!-- メインコンテンツ -->
    <div class="lg:pl-64 flex flex-col h-full">
      <!-- ヘッダー -->
      <header class="sticky top-0 z-30 bg-white border-b border-gray-200 shadow-sm">
        <div class="flex items-center justify-between h-16 px-4 sm:px-6 lg:px-8">
          <!-- 左側：ハンバーガーメニュー + 検索バー -->
          <div class="flex items-center flex-1">
            <button class="lg:hidden mr-3 text-gray-500 hover:text-gray-700"
                    data-action="click->admin-layout#openSidebar">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>

            <!-- 検索バー -->
            <div class="max-w-lg w-full">
              <label for="search" class="sr-only">検索</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </div>
                <input id="search" name="search"
                       class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                       placeholder="検索..."
                       type="search">
              </div>
            </div>
          </div>

          <!-- 右側：通知 + ユーザー情報 -->
          <div class="flex items-center space-x-4">
            <!-- 通知アイコン -->
            <div class="relative" data-controller="dropdown">
              <button class="relative p-2 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 rounded-lg"
                      data-action="click->dropdown#toggle">
                <span class="sr-only">通知を見る</span>
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
                <!-- 未読バッジ -->
                <span class="absolute top-1 right-1 block h-2 w-2 rounded-full bg-red-500 ring-2 ring-white"></span>
              </button>

              <!-- 通知ドロップダウン -->
              <div class="hidden origin-top-right absolute right-0 mt-2 w-80 rounded-lg shadow-lg bg-white ring-1 ring-black/5 focus:outline-none"
                   data-dropdown-target="menu">
                <div class="p-4">
                  <h3 class="text-sm font-semibold text-gray-900 mb-3">通知</h3>
                  <div class="space-y-3">
                    <div class="flex items-start space-x-3 p-2 hover:bg-gray-50 rounded-lg cursor-pointer">
                      <div class="flex-shrink-0">
                        <div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>
                      </div>
                      <div class="flex-1 min-w-0">
                        <p class="text-sm text-gray-900">新規案件が登録されました</p>
                        <p class="text-xs text-gray-500 mt-1">5分前</p>
                      </div>
                    </div>
                    <div class="flex items-start space-x-3 p-2 hover:bg-gray-50 rounded-lg cursor-pointer">
                      <div class="flex-shrink-0">
                        <div class="w-2 h-2 bg-gray-300 rounded-full mt-2"></div>
                      </div>
                      <div class="flex-1 min-w-0">
                        <p class="text-sm text-gray-900">請求書が承認されました</p>
                        <p class="text-xs text-gray-500 mt-1">1時間前</p>
                      </div>
                    </div>
                  </div>
                  <div class="mt-3 pt-3 border-t border-gray-200">
                    <a href="#" class="text-sm text-blue-600 hover:text-blue-700 font-medium">すべて見る →</a>
                  </div>
                </div>
              </div>
            </div>

            <!-- ユーザーメニュー -->
            <div class="relative" data-controller="dropdown">
              <button class="flex items-center space-x-3 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 rounded-lg p-2"
                      data-action="click->dropdown#toggle">
                <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                  <span class="text-white text-sm font-medium">山</span>
                </div>
                <div class="hidden sm:block text-left">
                  <p class="text-sm font-medium text-gray-700">山田太郎</p>
                  <p class="text-xs text-gray-500">管理者</p>
                </div>
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <!-- ユーザードロップダウン -->
              <div class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-lg shadow-lg bg-white ring-1 ring-black/5 focus:outline-none"
                   data-dropdown-target="menu">
                <div class="py-1">
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">マイページ</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">設定</a>
                  <div class="border-t border-gray-100"></div>
                  <a href="#" class="block px-4 py-2 text-sm text-red-600 hover:bg-gray-100">ログアウト</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- メインコンテンツエリア -->
      <main class="flex-1 overflow-y-auto">
        <!-- パンくずナビゲーション -->
        <% if @breadcrumbs.present? %>
          <div class="bg-white border-b border-gray-200 px-4 sm:px-6 lg:px-8 py-3">
            <nav class="flex" aria-label="Breadcrumb">
              <ol class="flex items-center space-x-2 text-sm">
                <li>
                  <%= link_to admin_dashboard_path, class: "text-gray-500 hover:text-gray-700" do %>
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                    </svg>
                  <% end %>
                </li>
                <% @breadcrumbs.each_with_index do |crumb, index| %>
                  <li class="flex items-center">
                    <svg class="h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                    <% if crumb[:path] %>
                      <%= link_to crumb[:name], crumb[:path], class: "ml-2 text-gray-500 hover:text-gray-700" %>
                    <% else %>
                      <span class="ml-2 text-gray-900 font-medium"><%= crumb[:name] %></span>
                    <% end %>
                  </li>
                <% end %>
              </ol>
            </nav>
          </div>
        <% end %>

        <!-- ページコンテンツ -->
        <div class="px-4 sm:px-6 lg:px-8 py-6">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
